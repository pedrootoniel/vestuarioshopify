{{ 'customer.css' | asset_url | stylesheet_tag }}
<div class="section__m-reset-password spacing gradient"
  style="--padding-top: {{ section.settings.padding_top }}px;
  --padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="{{ section.settings.section_width }} m-auto" {% if section.settings.section_width == 'customized-width' %}style="--page-width: {{ section.settings.customize_width }}px;"{% endif %}>
    <div class="p-w__header p-w__header--nogap">
      <div class="p-w__header--wrapper left">
        {% render 'breadcrumb',
          padding_top: '0.5rem',
          padding_bottom: '0.5rem',
          alignment: 'start'
        %}
        <h1 class="p-w__heading p-w__heading--page f-bold heading-size-small m-0">{{ 'customer.reset_password.title' | t }}</h1>
        <div class="p-w__description rte">
          <p>{{ 'customer.reset_password.subtext' | t }}</p>
        </div>
      </div>
    </div>
    <div class="p-w__content">
      <div class="customer reset-password">
        {%- form 'reset_customer_password' -%}
          {%- if form.errors -%}
            <h2 class="form__message d-flex a-i-center l-h-1 m-0" tabindex="-1" autofocus>
              <span class="visually-hidden">{{ 'accessibility.error' | t }} </span>
              {% render 'icon-error' %}
              {{ 'templates.contact.form.error_heading' | t }}
            </h2>
            <ul>
              {%- for field in form.errors -%}
                <li>
                  {%- if field == 'form' -%}
                    {{ form.errors.messages[field] }}
                  {%- else -%}
                    <a href="#{{ field }}" class="link link--text u-link u-u">
                      {{ form.errors.translated_fields[field] | capitalize }}
                      {{ form.errors.messages[field] }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
          <div class="field f-a-none f-b-none pos-relative">
            <label for="password" class="field__label field__label--inline d-block">
              {{ 'customer.reset_password.password' | t }}
            </label>
            <input
              class="field__input"
              type="password"
              name="customer[password]"
              id="password"
              autocomplete="new-password"
              {% if form.errors contains 'password' %}
                aria-invalid="true"
                aria-describedby="password-error"
              {% endif %}
              placeholder="{{ 'customer.reset_password.password' | t }}"
            >
            {%- if form.errors contains 'password' -%}
              <span id="password-error" class="form__message d-flex a-i-center l-h-1 m-b subrte">
                {% render 'icon-error' %}
                {{ form.errors.translated_fields.password | capitalize }}
                {{ form.errors.messages.password }}
              </span>
            {%- endif -%}
          </div>
          <div class="field f-a-none f-b-none pos-relative">
            <label for="password_confirmation" class="field__label field__label--inline d-block">
              {{ 'customer.reset_password.password_confirm' | t }}
            </label>
            <input
              class="field__input"
              type="password"
              name="customer[password_confirmation]"
              id="password_confirmation"
              autocomplete="new-password"
              {% if form.errors contains 'password_confirmation' %}
                aria-invalid="true"
                aria-describedby="password_confirmation-error"
              {% endif %}
              placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
            >
            {%- if form.errors contains 'password_confirmation' -%}
              <span id="password_confirmation-error" class="form__message d-flex a-i-center l-h-1 m-b subrte">
                {% render 'icon-error' %}
                {{ form.errors.translated_fields.password_confirmation | capitalize }}
                {{ form.errors.messages.password_confirmation }}
              </span>
            {%- endif -%}
          </div>
          <div class="field__action m-t" style="--m-t: 4rem;">
            <button type="submit" class="button {{ settings.button_style | prepend: 'button--style-' }} mi-w" style="--mi-w: 25rem;">
              <span>{{ 'customer.reset_password.submit' | t }}</span>
            </button>
          </div>
        {%- endform -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-reset-password.name",
  "settings": [
  {
    "type": "select",
    "id": "section_width",
    "options": [
    {
      "value": "full-width",
      "label": "t:sections.all.section_width.options__1"
    },
    {
      "value": "page-width",
      "label": "t:sections.all.section_width.options__2"
    },
    {
      "value": "customized-width",
      "label": "t:sections.all.section_width.options__3"
    }],
    "default": "customized-width",
    "label": "t:sections.all.section_width.label"
  },
  {
    "type": "range",
    "id": "customize_width",
    "min": 1000,
    "max": 1800,
    "step": 50,
    "default": 1400,
    "unit": "px",
    "label": "t:sections.all.customize_width.label"
  },
  {
    "type": "header",
    "content": "t:sections.all.padding.section_padding_heading"
  },
  {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 36
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 36
  }]
}
{% endschema %}
