{{ 'section-blog-post.css' | asset_url | stylesheet_tag }}
<div class="section__m-article spacing spacing-xs gradient article-style-{{ section.settings.type_style }} color-{{ section.settings.color_scheme }} gradient o-h"
  style="--padding-top: {{ section.settings.padding_top }}px; 
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --padding-top-xs: {{ section.settings.padding_top_mobile }}px; 
    --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;"
>
  {%- liquid
    assign has_sidebar = false
    assign products = section.blocks | where: 'type', 'products'
    assign collections = section.blocks | where: 'type', 'collections'
    assign brands = section.blocks | where: 'type', 'brands'
    assign posts = section.blocks | where: 'type', 'posts'
    assign tags = section.blocks | where: 'type', 'tags'
    assign image = section.blocks | where: 'type', 'image'
    assign text = section.blocks | where: 'type', 'text'
    if products.size > 0 or collections.size > 0 or brands.size > 0 or posts.size > 0 or tags.size > 0 or image.size > 0 or text.size > 0
      assign has_sidebar = true
    endif
    capture icon_caret
      render 'icon-caret'
    endcapture
  -%}
  <div class="main-blog">
    <div class="p-w__header">
      <div class="p-w__header--wrapper page-width m-auto{% if section.settings.type_style == 'special' %} {% endif %}">
        {% render 'breadcrumb', padding_top: '0.5rem', padding_bottom: '0.5rem', alignment: 'start' %}
      </div>
    </div>
    <div class="p-w__content {{ section.settings.section_width }} m-auto"{% if section.settings.section_width == 'customized-width' %} style="--page-width: {{ section.settings.customize_width }}px;"{% endif %}>
    {%- if has_sidebar -%}
      {{ 'component-sidebar.css' | asset_url | stylesheet_tag }}
      <div class="p-w__drawer clearfix">
        <aside aria-labelledby="verticalTitle" class="aside aside__vertical">
          <page-drawer
            id="Drawer-{{ section.id }}"
            data-breakpoint="xs,sm"
            data-class-component="drawer pos-fixed top-0 left-0 z-index-8 w-100v h-100 d-flex j-c-end no-js-hidden"
            data-class-inner="drawer__inner overflow-y overflow-x-h h-100"
            data-class-overlay="drawer__overlay pos-fixed top-0 left-0 right-0 bottom-0 c-pointer"
          >
            <div class="page-drawer">
              <div id="Drawer-Overlay-{{ section.id }}"></div>
              <div class="gradient d-flex f-column" id="Drawer-Inner-{{ section.id }}" role="dialog" aria-modal="true" aria-label="{{ 'general.sidebar.heading' | t }}" tabindex="-1">
                <div class="drawer__header d-flex j-c-between a-i-center pos-relative d-none-md no-js-hidden">
                  <h2 class="drawer__heading break m-0">{{ 'general.sidebar.heading' | t }}</h2>
                  <button class="drawer__close d-block t-button b-none c-pointer b-circle button--close" type="button"
                    onclick="this.closest('page-drawer').close()"
                    aria-label="{{ 'accessibility.close' | t }}"
                  >
                    <span class="i__close e-none d-block pos-relative color-current w-100 h-100"></span>
                  </button>
                </div>
                <div class="drawer__wrapper">{% render 'asides', section: section %}</div>
              </div>
            </div>
          </page-drawer>
        </aside>
        <div class="aside__sibling">
          <page-drawer-opener class="page__drawer-opener d-block d-none-md o-h no-js-hidden" data-side-drawer="#Drawer-{{ section.id }}">
            <button class="d-block t-button b-none c-pointer o-h l-h-1 gradient" type="button" aria-haspopup="dialog" aria-label="{{ 'general.sidebar.heading' | t }}">
              {% render 'icon-filter' %}
              {{ 'general.sidebar.heading' | t }}
            </button>
          </page-drawer-opener>
    {%- endif -%}
          <article class="article-template" itemscope itemtype="http://schema.org/BlogPosting">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when '@app' -%}
                  {% render block %}
                {%- when 'featured_image' -%}
                  {%- if article.image -%}
                    <div class="article-template__hero-container spacing{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" {{ block.shopify_attributes }}
                      style="--padding-top: {{ block.settings.padding_top }}px; --padding-bottom: {{ block.settings.padding_bottom }}px;"
                    >
                      <div class="media media--transparent pos-relative o-h" itemprop="image" style="padding-bottom: {{ 1 | divided_by: article.image.aspect_ratio | times: 100 }}%;">
                          <img srcset="{% if article.image.width >= 350 %}
                          {{ article.image | image_url: width: 350 }} 350w,{% endif %}
                          {% if article.image.width >= 750 %}
                          {{ article.image | image_url: width: 750 }} 750w,{% endif %}
                          {% if article.image.width >= 1100 %}
                          {{ article.image | image_url: width: 1100 }} 1100w,{% endif %}
                          {% if article.image.width >= 1500 %}
                          {{ article.image | image_url: width: 1500 }} 1500w,{% endif %}
                          {% if article.image.width >= 2200 %}
                          {{ article.image | image_url: width: 2200 }} 2200w,{% endif %}
                          {% if article.image.width >= 3000 %}
                          {{ article.image | image_url: width: 3000 }} 3000w,{% endif %}
                          {{ article.image | image_url }} {{ article.image.width }}w"
                          sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px) calc(100vw - 10rem), 100vw"
                          src="{{ article.image | image_url: width: 1100 }}"
                          loading="eager"
                          fetchpriority="high"
                          width="{{ article.image.width }}"
                          height="{{ article.image.height }}"
                          alt="{{ article.image.alt | escape }}">
                      </div>
                    </div>
                  {%- endif -%}
                {%- when 'title' -%}
                  <header class="d-flex f-wrap a-i-center spacing c-gap{% if section.settings.type_style == 'special' %} m-auto center{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" {{ block.shopify_attributes }} style="--padding-top: {{ block.settings.padding_top }}px; --padding-bottom: {{ block.settings.padding_bottom }}px; --c-gap: 1rem;">
                    <h1 class="article-template__title p-w__heading {{ block.settings.heading_size | prepend: 'heading-size-' }} h2 m-0{% if block.settings.enable_share %} has-share{% endif %}" itemprop="headline">{{ article.title | escape }}</h1>
                    {%- if block.settings.enable_share -%}
                      <div class="article-template__share l-h-1">
                      {%- liquid
                        assign share_label = 'blogs.article.share' | t
                        assign share_url = request.origin | append: article.url
                      -%}
                      {% render 'share-button', section: section, share_label: share_label, share_link: share_url %}
                      </div>
                    {%- endif -%}
                    {%- if block.settings.blog_show_date or block.settings.blog_show_author -%}
                      <div class="article-template__info w-100 color-light capitalize {{ block.settings.text_size | prepend: 'text-size-' }}">
                      <span>
                        {% if section.settings.type_style == 'special' %}
                        {% if block.settings.blog_show_author %}
                          {{ 'blogs.article.author_1' | t: author: article.author }}
                        {% endif %}
                        {% if block.settings.blog_show_date %}
                          {{ article.published_at | time_tag: '%b %d, %Y' }}{% endif %}
                        {% else %}
                        {% if block.settings.blog_show_author %}
                          {{ 'blogs.article.author' | t: author: article.author }}
                        {% endif %}
                        {% if block.settings.blog_show_date %}
                          {{ 'blogs.article.published_at' | t }} {{ article.published_at | time_tag: '%b %d, %Y' }}
                        {% endif %}
                        {% endif %}
                      </span>
                      {%- if block.settings.blog_show_date -%}
                        <span class="visually-hidden" itemprop="dateCreated pubdate datePublished">
                        {{- article.published_at | time_tag: format: 'date' -}}
                        </span>
                      {%- endif -%}
                      {%- if block.settings.blog_show_author -%}
                        <span
                        class="visually-hidden"
                        itemprop="author"
                        itemscope
                        itemtype="http://schema.org/Person">
                        <span itemprop="name">{{ article.author }}</span>
                        </span>
                      {%- endif -%}
                      </div>
                    {%- endif -%}
                    {% if section.settings.type_style == 'special' %}
                      <div class="tags tags-w-comment c-gap j-c-center w-100">
                      {% for tag in article.tags limit: 3 %}
                        <div class="item-tag d-inline-flex m-t-i">
                          <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="link link--text u-none d-block" aria-label="link">
                            {{ tag }}
                          </a>
                        </div>
                      {% endfor %}
                      {%- if blog.comments_enabled? -%}
                        <a class="info-item link--text comment capitalize u-none a-i-center" href="#comments">
                        {{ 'blogs.article.comments' | t: count: article.comments_count }}
                        </a>
                      {%- endif -%}
                      </div>
                    {% endif %}
                  </header>
                {%- when 'richtext' -%}
                  <div class="article-template__text spacing rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" {{ block.shopify_attributes }} style="--padding-top: {{ block.settings.padding_top }}px; --padding-bottom: {{ block.settings.padding_bottom }}px;">
                    {{ block.settings.richtext }}
                  </div>
                {%- when 'textarea' -%}
                  <div class="article-template__textarea spacing rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" {{ block.shopify_attributes }} style="--padding-top: {{ block.settings.padding_top }}px; --padding-bottom: {{ block.settings.padding_bottom }}px;">
                    {{ block.settings.textarea }}
                  </div>
                {%- when 'image-with-text' -%}
                  <div class="article-template__i-w-text spacing{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" {{ block.shopify_attributes }} style="--padding-top: {{ block.settings.padding_top }}px; --padding-bottom: {{ block.settings.padding_bottom }}px;">
                    {%- liquid
                      assign column_desktop = 1
                      if block.settings.heading != blank or block.settings.text != blank or block.settings.button_label != blank
                        assign column_desktop = 2
                      endif
                    -%}
                    <div class="banner grid-col d-flex f-wrap h-100 pos-relative{% if block.settings.layout == 'text_first' %} f-row-reverse-md{% endif %}" id="Banner-{{ section.id }}" style="--c-xs: 1; --c-sm: 1; --c-md: 1; --c-lg: {{ column_desktop }}; --grid: 0rem;">
                      <div class="banner__media grid__item">
                        <animate-element class="d-block gradient-global o-h" background>
                          <div class="media media--transparent media--zoom pos-relative d-block o-h w-100" style="padding-bottom: {% if block.settings.image != blank %}{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;{% else %}100%;{% endif %}" data-animate="zoom-out">
                            {%- if block.settings.image != blank -%}
                              {%- capture sizes -%}
                              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                              (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                              {%- endcapture -%}
                              {{ block.settings.image | image_url: width: 1500 | image_tag: loading: 'lazy', sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500' }}
                            {%- else -%}
                              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                            {%- endif -%}
                          </div>
                        </animate-element>
                      </div>
                      {%- if block.settings.heading != blank or block.settings.text != blank or block.settings.button_label != blank -%}
                        <div class="banner__content grid__item">
                          <div class="box left h-100 d-flex a-i-center-xs j-c-start a-i-center">
                            <animate-element class="box__wrapper d-block pos-relative">
                              {%- if block.settings.heading != blank -%}
                                <h4 class="banner__heading h4 f-bold m-0" data-animate="fade-up" style="--a-delay: 0.2s;">
                                  {{ block.settings.heading | escape }}
                                </h4>
                              {%- endif -%}
                              {%- if block.settings.text != blank -%}
                                <div class="banner__text rte" data-animate="fade-up" style="--a-delay: 0.25s;">
                                  {{ block.settings.text }}
                                </div>
                              {%- endif -%}
                              {%- if block.settings.button_label != blank -%}
                                <a {% if block.settings.button_link == blank %}role="link"aria-disabled="true"{% else %}href="{{ block.settings.button_link }}"{% endif %} class="button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }}{% if block.settings.button_transparent == 'transparent' %} button--transparent{% endif %} mi-w" aria-label="{{ block.settings.button_label }}" data-animate="fade-up" style="--a-delay: 0.3s; --mi-w: 21rem;">
                                  <span class="text">{{ block.settings.button_label | escape }}</span>
                                  {% render 'button-main-style' %}
                                </a>
                              {%- endif -%}
                            </animate-element>
                          </div>
                        </div>
                      {%- endif -%}
                    </div>
                  </div>
                {%- when 'content' -%}
                  <div class="article-template__content {{ block.settings.text_size | prepend: 'text-size-' }} spacing spacing{% if block.settings.show_line_separator %} bottom-line{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" itemprop="articleBody" {{ block.shopify_attributes }} style="--padding-top: {{ block.settings.padding_top }}px;--padding-bottom: {{ block.settings.padding_bottom }}px;">
                    {{ article.content }}
                  </div>
                {%- when 'quote' -%}
                  <div class="article-template__quote spacing{% if block.settings.show_line_separator %} bottom-line{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" itemprop="articleBody" {{ block.shopify_attributes }} style="--padding-top: {{ block.settings.padding_top }}px; --padding-bottom: {{ block.settings.padding_bottom }}px;">
                    {%- if block.settings.heading != blank -%}
                      <div class="p-w__header m-b-i">
                        <div class="p-w__header--wrapper left">
                          <h2 class="p-w__heading {{ block.settings.heading_size | prepend: 'heading-size-' }} m-0">{{ block.settings.heading | escape | default: collection.title }}</h2>
                        </div>
                      </div>
                    {%- endif -%}
                    {% if block.settings.des != blank %}
                      <div class="p-w__des {{ block.settings.text_size | prepend: 'text-size-' }}" style="--gradient-background:{{block.settings.gradient_background}};">
                        {{ block.settings.des }}
                      </div>
                    {% endif %}
                  </div>
                {%- when 'lookbook' -%}
                  <div class="article-template__lookbook spacing spacing color-{{ block.settings.lookbook_color_scheme }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" itemprop="articleBody" {{ block.shopify_attributes }}
                    style="--padding-top: {{ block.settings.padding_top }}px; --padding-bottom: {{ block.settings.padding_bottom }}px;"
                  >
                    {%- if block.settings.heading != blank -%}
                      <div class="p-w__header m-b-i">
                        <div class="p-w__header--wrapper left">
                          <h2 class="p-w__heading {{ block.settings.heading_size | prepend: 'heading-size-' }} m-0">{{ block.settings.heading | escape | default: collection.title }}</h2>
                        </div>
                      </div>
                    {%- endif -%}
                    <div class="lookbook__item swiper-slide" role="group" aria-roledescription="Slide" aria-label="{{ 'accessibility.slide' | t: index: forloop.index, total: forloop.length }}" style="--mi-w: 100%;" {{ block.shopify_attributes }}>
                      <div class="d-flex pos-relative w-100 h-100">
                        <div class="slider__image lookbook__image w-100 h-100 pos-absolute pos-absolute-c-c">
                          <div class="d-block w-100 h-100{% if block.settings.mobile_image == blank and block.settings.image == blank %} mask{% endif %}">
                            {%- if block.settings.image != blank -%}
                              {%- assign image_alt = block.settings.image.alt | default: shop.name | escape -%}
                              {%- if forloop.index == 1 -%}
                                {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840', sizes: "100vw", alt: image_alt, class: 'd-none d-block-md w-100 h-100 o-f-cover motion-reduce' }}
                              {%- else -%}
                                {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy', widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840', sizes: "100vw", alt: image_alt, class: 'd-none d-block-md w-100 h-100 o-f-cover motion-reduce' }}
                              {%- endif -%}
                            {%- else -%}
                              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg d-none d-block-md w-100 h-100 pos-absolute pos-absolute-c-c' }}
                            {%- endif -%}
                            {%- if block.settings.mobile_image != blank -%}
                              {%- assign image_alt = block.settings.mobile_image.alt | default: shop.name | escape -%}
                              {%- if forloop.index == 1 -%}
                                {{ block.settings.mobile_image | image_url: width: block.settings.mobile_image.width | image_tag: widths: '750', sizes: "(min-width: 361px) calc(100vw/2), calc(100vw/3)", alt: image_alt, class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce' }}
                              {%- else -%}
                                {{ block.settings.mobile_image | image_url: width: block.settings.mobile_image.width | image_tag: loading: 'lazy', widths: '750', sizes: "(min-width: 361px) calc(100vw/2), calc(100vw/3)", alt: image_alt, class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce' }}
                              {%- endif -%}
                            {%- elsif block.settings.image != blank -%}
                              {%- assign image_alt = block.settings.image.alt | default: shop.name | escape -%}
                              {%- if forloop.index == 1 -%}
                                {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: widths: '750', sizes: "(min-width: 361px) calc(100vw/2), calc(100vw/3)", alt: image_alt, class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce' }}
                              {%- else -%}
                                {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy', widths: '750', sizes: "(min-width: 361px) calc(100vw/2), calc(100vw/3)", alt: image_alt, class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce' }}
                              {%- endif -%}
                            {%- else -%}
                              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg d-block d-none-md w-100 h-100 pos-absolute pos-absolute-c-c' }}
                            {%- endif -%}
                          </div>
                        </div>
                        {%- if block.settings.heading != blank or block.settings.subheading != blank or block.settings.primary_button_label != blank or block.settings.secondary_button_label != blank -%}
                          <div class="slider__content lookbook__content d-flex a-i-center j-c-center f-shrink f-grow pos-relative w-100 z-index-2 o-h banner__content banner__content--{{ block.settings.box_align }}">
                            <animate-element class="slider__content--wrapper d-flex f-column j-c-center w-100 h-100 {{ block.settings.text_alignment }} banner__box">
                              <div class="banner__box--wrapper center w-100">
                                {%- if block.settings.primary_button_label != blank or block.settings.secondary_button_label != blank -%}
                                  <div class="banner__buttons break d-inline-flex f-wrap j-c-center g-gap" data-animate="fade-down" style="--a-delay: 0.8s;--g-gap: 1rem;">
                                    {%- if block.settings.primary_button_label != blank -%}
                                      <a class="button {{ settings.button_style | prepend: 'button--style-' }}"{% if block.settings.primary_button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.primary_button_link }}"{% endif %}>
                                        <span class="text">{{ block.settings.primary_button_label | upcase }}</span>
                                      </a>
                                    {%- endif -%}
                                    {%- if block.settings.secondary_button_label != blank -%}
                                      <a class="button {{ settings.button_style | prepend: 'button--style-' }}"{% if block.settings.secondary_button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.secondary_button_link }}"{% endif %}>
                                        <span class="text">{{ block.settings.secondary_button_label | upcase }}</span>
                                      </a>
                                    {%- endif -%}
                                  </div>
                                {%- endif -%}
                              </div>
                            </animate-element>
                          </div>
                        {%- endif -%}
                      </div>
                    </div>
                  </div>
                {%- when 'tag' -%}
                  <div class="article-template__tag spacing{% if block.settings.show_line_separator %} b-top{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" {{ block.shopify_attributes }}
                    style="--padding-top: {{ block.settings.padding_top }}px; --padding-bottom: {{ block.settings.padding_bottom }}px;"
                  >
                    <div class="d-flex f-wrap j-c-{% if section.settings.type_style == 'special' %}center j-c-start-xs a-i-center{% else %}start a-i-start{% endif %}">
                      {%- if block.settings.label != blank -%}
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                          <path d="M3.5 5C3.10218 5 2.72064 4.84196 2.43934 4.56066C2.15804 4.27936 2 3.89782 2 3.5C2 3.10218 2.15804 2.72064 2.43934 2.43934C2.72064 2.15804 3.10218 2 3.5 2C3.89782 2 4.27936 2.15804 4.56066 2.43934C4.84196 2.72064 5 3.10218 5 3.5C5 3.89782 4.84196 4.27936 4.56066 4.56066C4.27936 4.84196 3.89782 5 3.5 5ZM19.41 9.58L10.41 0.58C10.05 0.22 9.55 0 9 0L2 0C0.89 0 0 0.89 0 2L0 9C0 9.55 0.22 10.05 0.59 10.41L9.58 19.41C9.95 19.77 10.45 20 11 20C11.55 20 12.05 19.77 12.41 19.41L19.41 12.41C19.78 12.05 20 11.55 20 11C20 10.44 19.77 9.94 19.41 9.58Z" fill="black"/>
                        </svg>
                        <span class="d-block label f-medium">{{ block.settings.label | escape }}</span>
                      {%- endif -%}
                      <ul class="{% if section.settings.type_style == 'special' %}tags {% endif %}d-flex f-wrap list-unstyled g-gap list-unstyled" role="list">
                        {%- for tag in article.tags -%}
                          <li class="article-template__tag-item{% if section.settings.type_style == 'special' %} item-tag{% endif %} m-t-i" role="listitem">
                            <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="link link--text u-none d-block" aria-label="link">
                              {{ tag }}
                            </a>
                          </li>
                        {%- endfor -%}
                      </ul>
                    </div>
                  </div>
              {%- endcase -%}
            {%- endfor -%}
            {% if section.settings.type_style != 'special' %}
              <div class="article-template__back left{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
                <a href="{{ blog.url }}" class="article-template__link link link--text h-link link--style-line d-flex a-i-center j-c-start animate-arrow">
                  <span class="icon-wrap d-flex w-s-nowrap">{% render 'icon-arrow' %}</span>
                  <span class="link-style">{{ 'blogs.article.back_to_blog' | t: title: blog.title }}</span>
                </a>
              </div>
            {% endif %}
            {%- if blog.comments_enabled? -%}
              <div class="article-template__comment-wrapper">
                <div id="comments" class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
                  {%- if article.comments_count > 0 -%}
                    {%- assign anchorId = '#Comments-' | append: article.id -%}
                    <div class="comments-head d-flex j-c-between a-i-center">
                      <h2 id="Comments-{{ article.id }}" tabindex="-1" class="h2{% if section.settings.type_style == 'special' %} capitalize{% endif %} p-w__heading heading-size-default m-0">
                        {{ 'blogs.article.comments' | t: count: article.comments_count }}
                      </h2>
                      {% if section.settings.type_style == 'special' %}
                        <write-comment>
                          <button class="button color-accent-2 {{ settings.button_style | prepend: 'button--style-' }}">
                            <span class="text">{{ 'blogs.article.post_comment' | t }}</span>
                          </button>
                        </write-comment>
