{%- liquid
  assign video_id = section.settings.video.id | default: section.settings.video_url.id
  assign video_alt = section.settings.video.alt | default: section.settings.description
  assign alt = 'sections.video.load_video' | t: description: video_alt | escape
  assign column_desktop = 1
  if section.blocks.size > 0
    assign column_desktop = 2
  endif
-%}

<div class="section__video-w-text spacing spacing-xs color-{{ section.settings.color_scheme }} gradient"
  style="--padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --padding-top-xs: {{ section.settings.padding_top_mobile }}px;
    --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;"
>
  <div class="banner grid-col d-flex f-wrap h-100 pos-relative{% if section.settings.layout == 'text_first' %} video--second f-row-reverse-md{% endif %} {{ ratio_diff }}" id="Banner-{{ section.id }}" style="--c-xs: 1; --c-sm: 1; --c-md: {{ column_desktop }}; --c-lg: {{ column_desktop }}; --grid: 0">
    <div class="banner__media grid__item">
      <animate-element class="d-block gradient-global o-h" background>
        <{% if video_id != blank %}deferred-media{% else %}div{% endif %} class="{% if video_id != blank %} deferred-media{% endif %} media media--transparent pos-relative d-block o-h w-100" style="padding-bottom: {% if section.settings.cover_image != blank %}{{ 1 | divided_by: section.settings.cover_image.aspect_ratio | times: 100 }}%;{% else %}100%;{% endif %}" data-media-id="{{ video_id }}" data-animate="zoom-out">
          {%- if video_id != blank -%}
            <button id="Deferred-Poster-Modal-{{ video_id }}" class="deferred-media__poster t-button b-none c-pointer p-0 pos-absolute w-100 h-100 d-block" type="button" aria-label="{{ alt }}">
          {%- endif -%}
          {%- if section.settings.cover_image != blank -%}
            {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
              (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
            {{ section.settings.cover_image | image_url: width: 1500 | image_tag: loading: 'lazy', sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500' }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
          {%- if video_id != blank -%}
              <span class="deferred-media__poster-button pos-absolute pos-absolute-c-c z-index-1 b-circle d-flex a-i-center j-c-center c-pointer gradient gradient-global motion-reduce no-js-hidden">{%- render 'icon-play' -%}</span>
            </button>
            <template>
              {%- if section.settings.video == null and section.settings.video_url != null -%}
                {%- liquid
                  assign loop = ''
                  if section.settings.enable_video_looping
                    assign loop = '&loop=1&playlist=' | append: video_id
                  endif
                -%}
                {%- if section.settings.video_url.type == 'youtube' -%}
                  <iframe
                    src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&autoplay=1{{ loop }}"
                    class="js-youtube pos-absolute w-100 h-100 b-none"
                    allow="autoplay; encrypted-media"
                    allowfullscreen
                    title="{{ section.settings.description | escape }}"
                  ></iframe>
                {%- else -%}
                  <iframe
                    src="https://player.vimeo.com/video/{{ video_id }}?autoplay=1{{ loop }}"
                    class="js-vimeo pos-absolute w-100 h-100 b-none"
                    allow="autoplay; encrypted-media"
                    allowfullscreen
                    title="{{ section.settings.description | escape }}"
                  ></iframe>
                {%- endif -%}
              {%- else -%}
                {{ section.settings.video | video_tag: image_size: "1100x", autoplay: true, loop: section.settings.enable_video_looping, controls: true, muted: false }}
              {%- endif -%}
            </template>
          {%- endif -%}
        </{% if video_id != blank %}deferred-media{% else %}div{% endif %}>
      </animate-element>
    </div>
    {%- if section.blocks.size > 0 -%}
      <div class="banner__content grid__item">
        <div class="box {{ section.settings.desktop_content_alignment }} {{ section.settings.mobile_content_alignment }}-xs h-100 o-h pos-relative d-flex a-i-center-xs j-c-{{ section.settings.desktop_content_alignment | replace: 'left', 'start' | replace: 'right', 'end' }} j-c-{{ section.settings.mobile_content_alignment | replace: 'left', 'start' | replace: 'right', 'end' }}-xs a-i-{{ section.settings.desktop_content_position | replace: 'top', 'start' | replace: 'bottom', 'end' | replace: 'middle', 'center' }} gradient"
          {%- if section.settings.background_for_box != blank -%}
            style="--background: url({{ section.settings.background_for_box | img_url: 'master' }});" 
          {%- endif -%}
        >
          <animate-element class="box__wrapper d-block pos-relative z-index-1">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'heading' -%}
                  {%- if block.settings.heading != blank -%}
                    <h2 class="banner__heading {{ block.settings.heading_size }} f-bold m-0 element-spacing" data-animate="{{ section.settings.text_animation }}" {{ block.shopify_attributes }}
                      style="--padding-top: {{ block.settings.padding_top }}px;
                        --padding-bottom: {{ block.settings.padding_bottom }}px;
                        --a-delay: {{ '0.2' | times: forloop.index }}s;"
                    >{{ block.settings.heading | escape }}</h2>
                  {%- endif -%}
                {%- when 'caption' -%}
                  {%- if block.settings.caption != blank -%}
                    <p class="banner__caption element-spacing m-0" data-animate="{{ section.settings.text_animation }}" {{ block.shopify_attributes }}
                      style="--padding-top: {{ block.settings.padding_top }}px;
                        --padding-bottom: {{ block.settings.padding_bottom }}px;
                        --a-delay: {{ '0.2' | times: forloop.index }}s;"
                    >{{ block.settings.caption | escape }}</p>
                  {%- endif -%}
                {%- when 'text' -%}
                  {%- if block.settings.text != blank -%}
                    <div class="banner__text h3 rte m-0 element-spacing" data-animate="{{ section.settings.text_animation }}" {{ block.shopify_attributes }}
                      style="--padding-top: {{ block.settings.padding_top }}px;
                        --padding-bottom: {{ block.settings.padding_bottom }}px;
                        --a-delay: {{ '0.2' | times: forloop.index }}s;"
                    >{{ block.settings.text }}</div>
                  {%- endif -%}
                {%- when 'button' -%}
                  {%- if block.settings.button_label != blank -%}
                    <div class="banner__buttons element-spacing" data-animate="{{ section.settings.text_animation }}" {{ block.shopify_attributes }}
                      style="--padding-top: {{ block.settings.padding_top }}px;
                        --padding-bottom: {{ block.settings.padding_bottom }}px;
                        --a-delay: {{ '0.2' | times: forloop.index }}s;"
                    >
                      <a {% if block.settings.button_link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.button_link }}"{% endif %} class="button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }}{% if block.settings.button_transparent == 'transparent' %} button--transparent{% endif %}" aria-label="{{ block.settings.button_label }}">
                        <span class="text">{{ block.settings.button_label | escape }}</span>
                        {% render 'button-main-style' %}
                      </a>
                    </div>
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </animate-element>
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

