<div class="section__cate-list spacing spacing-xs color-{{ section.settings.color_scheme }} gradient"
    style="
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --padding-top-xs: {{ section.settings.padding_top_mobile }}px;
    --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;
    {% if section.settings.use_custom_color %}
    --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
    --color-background: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
    --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};
    {% endif %}
    "
>
    <div class="{{ section.settings.section_width }} m-auto"{% if section.settings.section_width == 'customized-width' %} style="--page-width: {{ section.settings.customize_width }}px;"{% endif %}>
        <div class="p-w__header{% if section.settings.section_width == 'full-width' %} page-width{% endif %} m-spacing"
            style="--m-spacing-b: {{ section.settings.margin_bottom }}px;"
        >
            <div class="p-w__header--wrapper {{ section.settings.text_alignment }}">
                {%- if section.settings.heading != blank -%}
                    <{% if section.settings.text_animation == 'split' %}splitting-animate{%  else %}animate-element{% endif %} class="d-block">
                        <h2 class="p-w__heading {{ section.settings.heading_size | prepend: 'heading-size-' }} m-0 uppercase{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                            id="SectionHeading-{{ section.id }}"
                            {% if section.settings.text_animation == 'split' %}
                            data-splitting-element="chars"
                            data-splitting-animate="up"
                            {% else %}
                            data-animate="{{ section.settings.text_animation }}"
                            {% endif %}
                        >
                            {{ section.settings.heading | escape }}
                        </h2>
                    </{% if section.settings.text_animation == 'split' %}splitting-animate{%  else %}animate-element{% endif %}>
                {%- endif -%}
            </div>
        </div>
        <div class="p-w__content">
            <animate-element class="cate-list d-grid m-w mx-auto" style="--g-gap-lg: 1.6rem;--g-gap-md: 1.4rem;--r-gap-md: 1.2rem;--g-gap-xs: 1rem;--m-w: 106rem">
                {%- for block in section.blocks -%}
                    <div class="cate-list__item" style="--a-delay: 0.{{ forloop.index }}s" data-animate="fade-up">
                        {%- if block.settings.button_label != blank -%}
                            <a class="button button--transparent w-100 o-h uppercase"
                                {% if block.settings.button_link == blank %}
                                    role="link" aria-disabled="true"
                                {% else %}
                                    href="{{ block.settings.button_link }}"
                                {% endif %}
                                style="--color-line: {{ block.settings.color_line.rgb }}"
                            >
                                <span class="text text-head {{ section.settings.text_size | prepend: 'text-size-' }}">
                                    <span class="text-inner d-inline-block">
                                        {{ block.settings.button_label | escape }}
                                    </span>
                                </span>
                                <span class="text text-bot pos-absolute w-100 h-100 top-0 left-0 d-flex a-i-center j-c-center {{ section.settings.text_size | prepend: 'text-size-' }}">
                                    <span class="text-inner d-inline-block">
                                        {{- block.settings.button_label | escape -}}
                                    </span>
                                </span>
                            </a>
                        {%- endif -%}
                    </div>
                {%- endfor -%}
            </animate-element>
        </div>
    </div>
</div>

