<slideshow-component class="section__db-banner d-block spacing spacing-xs color-{{ section.settings.color_scheme }} gradient"
    style=" --padding-top: {{ section.settings.padding_top }}px;
        --padding-bottom: {{ section.settings.padding_bottom }}px;
        --padding-top-xs: {{ section.settings.padding_top_mobile }}px;
        --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;
        {% if section.settings.use_custom_color %}
        --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
        --color-background: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
        --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};
        {% endif %}"
>
    <div class="{{ section.settings.section_width }} m-auto{% if section.settings.section_width == 'full-width' %} p-banner{% endif %}"{% if section.settings.section_width == 'customized-width' %} style="--page-width: {{ section.settings.customize_width }}px;"{% endif %}>
        <div class="db-banner-wrap pos-relative banner__media-hover rounded-ovh"
            style="--media-opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
                --color-opacity: {{ section.settings.color_overlay_opacity.red }},{{ section.settings.color_overlay_opacity.green }},{{ section.settings.color_overlay_opacity.blue }};"
        >
            <div class="db-banner__row d-flex" style="--padding-image-xs: {{ section.settings.mobile_row_height }}%">
            <div class="db-banner__item --left">
                <animate-element class="db-banner__media no-js-hidden">
                    <div class="media pos-relative d-block o-h w-100 h-100 load-image{% if section.settings.image_first != blank and section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
                        data-animate="{{ section.settings.image_animation }}"
                        style="padding-top: {% if section.settings.image_first != blank %}{{ 1 | divided_by: section.settings.image_first.aspect_ratio | times: 100 }}{% else %}56{% endif %}%;{% if section.settings.image_animation != 'flip-left' %}--delay:0.2s{% else %}--delay:0.4s{% endif %}"
                    >
                        {%- if section.settings.image_first != blank -%}
                            {{ section.settings.image_first | image_url: width: 3840 | image_tag:
                                loading: 'lazy',
                                width: section.settings.image_first.width,
                                height: image_height,
                                class: image_class,
                                sizes: full_width,
                                widths: widths
                            }}
                        {%- else -%}
                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg w-100 h-100' }}
                        {%- endif -%}
                    </div>
                </animate-element>
                <noscript>
                    <div class="db-banner__media">
                        <div class="media pos-relative d-block o-h w-100 h-100 load-image" style="padding-top: {% if section.settings.image_first != blank %}{{ 1 | divided_by: section.settings.image_first.aspect_ratio | times: 100 }}{% else %}56{% endif %}%;">
                            {%- if section.settings.image_first != blank -%}
                                {{ section.settings.image_first | image_url: width: 3840 | image_tag:
                                    loading: 'lazy',
                                    width: section.settings.image_first.width,
                                    height: image_height,
                                    class: image_class,
                                    sizes: full_width,
                                    widths: widths
                                }}
                            {%- else -%}
                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg w-100 h-100' }}
                            {%- endif -%}
                        </div>
                    </div>
                </noscript>
            </div>
            <div class="db-banner__item --right">
                <animate-element class="db-banner__media no-js-hidden">
                    <div class="media pos-relative d-block o-h w-100 h-100 load-image {% if section.settings.image_second != blank and section.settings.image_behavior != 'none' %}animate--{{ section.settings.image_behavior | replace: 'prl-scroll', 'prl-scroll ani--sec' }}{% endif %}"
                        data-animate="{{ section.settings.image_animation }}"
                        style="padding-top: {% if section.settings.image_second != blank %}{{ 1 | divided_by: section.settings.image_second.aspect_ratio | times: 100 }}{% else %}100{% endif %}%;{% if section.settings.image_animation != 'flip-left' %}--delay:0.4s{% else %}--delay:0.2s{% endif %}"
                    >
                        {%- if section.settings.image_second != blank -%}
                            {{ section.settings.image_second | image_url: width: 3840 | image_tag:
                                loading: 'lazy',
                                width: section.settings.image_second.width,
                                height: image_height,
                                class: image_class,
                                sizes: full_width,
                                widths: widths
                            }}
                        {%- else -%}
                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg w-100 h-100' }}
                        {%- endif -%}
                    </div>
                </animate-element>
                <noscript>
                    <div class="db-banner__media">
                        <div class="media pos-relative d-block o-h w-100 h-100 load-image" style="padding-top: {% if section.settings.image_first != blank %}{{ 1 | divided_by: section.settings.image_first.aspect_ratio | times: 100 }}{% else %}100{% endif %}%;">
                            {%- if section.settings.image_second != blank -%}
                                {{ section.settings.image_second | image_url: width: 3840 | image_tag:
                                    loading: 'lazy',
                                    width: section.settings.image_second.width,
                                    height: image_height,
                                    class: image_class,
                                    sizes: full_width,
                                    widths: widths
                                }}
                            {%- else -%}
                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg w-100 h-100' }}
                            {%- endif -%}
                        </div>
                    </div>
                </noscript>
            </div>
            <animate-element class="db-banner__content center pos-absolute top-0 left-0 w-100 h-100 d-flex f-column a-i-center j-c-center z-index-2">
                {%- for block in section.blocks -%}
                    {%- if block.settings.heading != blank -%}
                        <div class="db-banner__heading element-spacing element-spacing-all data__media-hover" data-animate="{{ section.settings.text_animation }}" 
                            style="--padding-top:{{ block.settings.padding_top }}px; --padding-bottom:{{ block.settings.padding_bottom }}px;--a-delay: 0.2s;">
                            <h2 class="heading-text p-w__heading {{ block.settings.heading_size | prepend: 'heading-size-' }}">
                                <span class="text">
                                    {{ block.settings.heading }}
                                </span>
                            </h2>
                        </div>
                    {%- endif -%}
                    {%- if block.settings.primary_button_label != blank -%}
                        <div class="db-banner__button data__media-hover element-spacing-all" data-animate="{{ section.settings.text_animation }}"
                            style="--a-delay: 0.4s;--padding-top:{{ block.settings.padding_top }}px; --padding-bottom:{{ block.settings.padding_bottom }}px;"
                        >
                            {%- if settings.enable_animated_cursor -%}
                                <a {% if block.settings.primary_button_link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.primary_button_link }}"{% endif %} class="cursor-fixed__parallax-target d-inline-block pos-relative">
                                    <span class="cursor-fixed__parallax-inner d-inline-block">
                            {%- endif -%}
                                <{% if settings.enable_animated_cursor %}span{% else %}a {% if block.settings.primary_button_link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.primary_button_link }}"{% endif %}{% endif %} class="button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }}">
                                    <span class="text">{{ block.settings.primary_button_label | escape }}</span>
                                    {% render 'button-main-style' %}
                                </{% if settings.enable_animated_cursor %}span{% else %}a{% endif %}>
                            {%- if settings.enable_animated_cursor -%}
                                    </span>
                                </a>
                            {%- endif -%}
                        </div>
                    {%- endif -%}
                {%- endfor -%}
            </animate-element>
        </div>
    </div>
</slideshow-component>
