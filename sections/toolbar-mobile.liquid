{{ 'toolbar-mobile.css' | asset_url | stylesheet_tag }}
<toolbar-mobile class="toolbar-mobile toolbar-mobile-col--{{ section.blocks.size }} element-spacing-all pos-fixed left-0 right-0 bottom-0 w-100 d-flex z-index-2 color-{{ section.settings.color_scheme }} gradient d-none-lg no-js-hidden"
    style="
        --padding-top: {{ section.settings.padding_top }}px;
        --padding-bottom: {{ section.settings.padding_bottom }}px;
        --icon-size: {{ section.settings.icon_size }}px;
    "
>
    {%- for block in section.blocks -%}
        {%- case block.type -%}
            {%- when 'search' -%}
                {%- if block.settings.action_type == 'drawer' -%}
                    <side-drawer-opener 
                        class="toolbar__item f-grow f-shrink d-flex j-c-center a-i-center p-0 u-none color-foreground f-a-none" 
                        data-side-drawer="#Drawer-Search"
                    >
                        <button 
                            class="t-button d-flex j-c-center a-i-center f-column b-none c-pointer p-0 color-foreground bg-transparent focus-inset no-js-hidden u-none link u-link h-100" 
                            type="button" 
                            aria-haspopup="dialog" 
                            aria-label="{{ 'general.search.search' | t }}"
                        >
                            {%- if block.settings.icon != blank -%}
                                {{ block.settings.icon }}
                            {%- else -%}
                                {% render 'icon-search', style_icon: 'classy' %}
                            {%- endif -%}
                            {%- if block.settings.title != blank -%}
                                <span class="text">{{ block.settings.title | escape }}</span>
                            {%- endif -%}
                        </button>
                    </side-drawer-opener>
                {%- else -%}
                    <a href="{{ routes.search_url }}" 
                        class="toolbar__item f-grow f-shrink d-flex j-c-center a-i-center f-column p-0 u-none color-foreground f-a-none focus-inset pos-relative h-100" aria-label="{{ block.settings.title | escape }}"
                    >
                        {%- if block.settings.icon != blank -%}
                            {{ block.settings.icon }}
                        {%- else -%}
                            {% render 'icon-search', style_icon: 'classy' %}
                        {%- endif -%}
                        {%- if block.settings.title != blank -%}
                                <span class="text">{{ block.settings.title | escape }}</span>
                            {%- endif -%}
                    </a>
                {%- endif -%}
            {%- when 'account' -%}
                {%- if block.settings.action_type == 'drawer' -%}
                    <side-drawer-opener 
                        class="toolbar__item f-grow f-shrink d-flex j-c-center a-i-center p-0 u-none color-foreground f-a-none" 
                        data-side-drawer="#Drawer-Account"
                    >
                    
                        <button class="t-button d-flex j-c-center a-i-center f-column b-none c-pointer p-0 color-foreground bg-transparent focus-inset no-js-hidden u-none link h-100" 
                            type="button" 
                            aria-haspopup="dialog" 
                            aria-label="{% if customer %}{{ 'customer.account_fallback' | t }}{% else %}{{ 'customer.log_in' | t }}{% endif %}"
                        >
                            {%- if block.settings.icon != blank -%}
                                {{ block.settings.icon }}
                            {%- else -%}
                                {% render 'icon-account', style_icon: 'classy' %}
                            {%- endif -%}
                            {%- if block.settings.title != blank -%}
                                <span class="text">{{ block.settings.title | escape }}</span>
                            {%- endif -%}
                        </button>
                    </side-drawer-opener>
                {%- else -%}
                    <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" 
                        class="toolbar__item f-grow f-shrink d-flex j-c-center a-i-center f-column p-0 u-none color-foreground f-a-none focus-inset pos-relative h-100" aria-label="{{ block.settings.title | escape }}"
                    >
                        {%- if block.settings.icon != blank -%}
                            {{ block.settings.icon }}
                        {%- else -%}
                            {% render 'icon-account', style_icon: 'classy' %}
                        {%- endif -%}
                        {%- if block.settings.title != blank -%}
                                <span class="text">{{ block.settings.title | escape }}</span>
                            {%- endif -%}
                        <span class="visually-hidden">
                            {%- liquid
                            if customer
                                echo 'customer.account_fallback' | t
                            else
                                echo 'customer.log_in' | t
                            endif
                            -%}
                        </span>
                    </a>
                {%- endif -%}
            {%- when 'cart' -%}
                {%- if block.settings.action_type == 'drawer' -%}
                    <side-drawer-opener 
                        class="toolbar__item f-grow f-shrink d-flex j-c-center a-i-center p-0 u-none color-foreground f-a-none" 
                        data-side-drawer="#Cart-Drawer"
                    >
                        <button class="t-button d-flex j-c-center a-i-center f-column b-none c-pointer p-0 color-foreground bg-transparent focus-inset no-js-hidden u-none link pos-relative h-100" 
                            type="button" 
                            aria-haspopup="dialog" 
                            aria-label="{{ 'templates.cart.cart_items' | t: count: cart.item_count }}"
                        >
                            <div class="count-bubble pos-relative">
                                {%- if block.settings.icon != blank -%}
                                    {{ block.settings.icon }}
                                {%- else -%}
                                    {% render 'icon-cart', style_icon: 'classy' %}
                                {%- endif -%}
                                {%- if cart.item_count < 100 -%}
                                    <div class="cart-count-bubble l-h-1 pos-absolute b-circle d-flex j-c-center a-i-center cart-icon-bubble">
                                        <span aria-hidden="true">{{ cart.item_count }}</span>
                                        <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
                                    </div>
                                {%- endif -%}
                            </div>
                            {%- if block.settings.title != blank -%}
                                <span class="text">{{ block.settings.title | escape }}</span>
                            {%- endif -%}
                        </button>
                    </side-drawer-opener>
                {%- else -%}
                    <a href="{{ routes.cart_url }}" 
                        class="toolbar__item f-grow f-shrink d-flex j-c-center a-i-center f-column p-0 u-none color-foreground f-a-none focus-inset pos-relative h-100"
                    >
                        <div class="count-bubble pos-relative" style="line-height: 0;">
                            {%- if block.settings.icon != blank -%}
                                {{ block.settings.icon }}
                            {%- else -%}
                                {% render 'icon-cart', style_icon: 'classy' %}
                            {%- endif -%}
                            {%- if cart.item_count < 100 -%}
                                <div class="cart-count-bubble l-h-1 pos-absolute b-circle d-flex j-c-center a-i-center cart-icon-bubble">
                                    <span aria-hidden="true">{{ cart.item_count }}</span>
                                    <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
                                </div>
                            {%- endif -%}
                        </div>
                        {%- if block.settings.title != blank -%}
                                <span class="text">{{ block.settings.title | escape }}</span>
                            {%- endif -%}
                    </a>
                {%- endif -%}
            {%- when 'wishlist' -%}
                <side-drawer-opener 
                    class="toolbar__item f-grow f-shrink d-flex j-c-center a-i-center p-0 u-none color-foreground f-a-none" 
                    data-side-drawer="#Drawer-Wishlist"
                >
                    <button class="t-button d-flex j-c-center a-i-center f-column b-none c-pointer p-0 color-foreground bg-transparent focus-inset no-js-hidden u-none link pos-relative h-100" 
                        type="button" 
                        aria-haspopup="dialog" 
                        aria-label="{{ 'templates.wishlist.wishlist_items' | t: count: cart.item_count }}"
                    >
                        <div class="count-bubble pos-relative">
                            {%- if block.settings.icon != blank -%}
                                {{ block.settings.icon }}
                            {%- else -%}
                                {% render 'icon-wishlist', style_icon: 'classy' %}
                            {%- endif -%}
                            <div class="wishlist-count-bubble l-h-1 pos-absolute b-circle d-flex j-c-center a-i-center">
                                <span class="number" aria-hidden="true">0</span>
                                <span class="visually-hidden" data-text="{{ 'templates.wishlist.items' | t }}">0 {{ 'templates.wishlist.items' | t }}</span>
                            </div>
                        </div>
                        {%- if block.settings.title != blank -%}
                                <span class="text">{{ block.settings.title | escape }}</span>
                            {%- endif -%}
                    </button>
                </side-drawer-opener>
            {%- when 'link' -%}
                <a {% if block.settings.link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.link }}"{% endif %} 
                    class="toolbar__item f-grow f-shrink d-flex j-c-center a-i-center f-column center u-none link u-link link--text" aria-label="{{ block.settings.title | escape }}"
                >
                    {%- if block.settings.icon != blank -%}
                        {{ block.settings.icon }}
                    {%- else -%}
                        {% render 'icon-shop' %}
                    {%- endif -%}
                    {%- if block.settings.title != blank -%}
                        <span class="text">{{ block.settings.title | escape }}</span>
                    {%- endif -%}
                </a>
        {%- endcase -%}
    {%- endfor -%}
</toolbar-mobile>

{%- liquid
    assign files = 'toolbar-mobile.js'
    assign files = files | split: ', '
    render 'theme-loader', files: files
-%}

