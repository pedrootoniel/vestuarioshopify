{%- liquid
    capture icon_arrow_list
        render 'icon-arrow-list'
    endcapture
-%}
<div class="section__coll-w-bundle spacing spacing-xs o-h color-{{ section.settings.color_scheme }} gradient"
    style="
        --padding-top: {{ section.settings.padding_top }}px;
        --padding-bottom: {{ section.settings.padding_bottom }}px;
        --padding-top-xs: {{ section.settings.padding_top_mobile }}px;
        --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;
        {% if section.settings.mobile_color_scheme == 'custom' %}
            --color-foreground-xs: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
            --color-background-xs: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
            --gradient-background-xs: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};
        {% endif %}
    "
>
    <div class="{{ section.settings.section_width }} m-auto{% if section.settings.section_width == 'full-width' %} p-banner{% endif %}"{% if section.settings.section_width == 'customized-width' %} style="--page-width: {{ section.settings.customize_width }}px;"{% endif %}>
        {%- if section.settings.heading != blank or section.settings.content != blank -%}
            <div class="p-w__header m-spacing {{ section.settings.text_alignment }}" style="--m-spacing-b: {{ section.settings.content_margin_bottom }}px;">
                {%- if section.settings.heading != blank -%}
                    <h2 class="p-w__heading {{ section.settings.heading_size | prepend: 'heading-size-' }} m-0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                        id="SectionHeading-{{ section.id }}"
                        {% if section.settings.text_animation == 'split' %}
                            data-splitting-element="chars"
                            data-splitting-animate="up"
                        {% else %}
                            data-animate="{{ section.settings.text_animation }}"
                        {% endif %}
                    >
                        {{ section.settings.heading | escape }}
                    </h2>
                {%- endif -%}
                {%- if section.settings.text != blank -%}
                    <div class="p-w__text rte {{ section.settings.text_size | prepend: 'text-size-' }}">
                        {{ section.settings.text }}
                    </div>
                {%- endif -%}
            </div>
        {%- endif -%}
