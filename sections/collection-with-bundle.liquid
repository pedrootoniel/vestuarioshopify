                    {% if section.blocks.size == 2 %}
                        data-item-xxl="2" 
                        data-item-xl="2" 
                        data-item-lg="2" 
                        data-item-md="2" 
                        data-item-sm="1.2" 
                        data-item-xs="1.2"  
                        data-space-between="20"
                    {% endif %}
                    {% if section.blocks.size == 1 %}
                        data-item-xxl="1" 
                        data-item-xl="1" 
                        data-item-lg="1" 
                        data-item-md="1" 
                        data-item-sm="1" 
                        data-item-xs="1"  
                        data-space-between="20"
                    {% endif %}
