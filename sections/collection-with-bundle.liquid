                                {%- for block in section.blocks -%}
                                    <div class="coll-w-bundle__item swiper-slide">
                                        <div class="item-wrap pos-relative rounded-ovh">
                                            {%- liquid
                                                assign banner = block.settings.image
                                                assign collection = block.settings.collection
                                                assign products = block.settings.product_list | default: collection.products
                                                if block.settings.product_list.count != 0
                                                    assign total_products = block.settings.product_list.count
                                                else
                                                    assign total_products = collection.all_products_count
                                                endif
