{%- liquid
  assign full_width = '100vw'
  assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'

  if section.settings.image_behavior == 'ambient'
    assign half_width = '60vw'
    assign full_width = '120vw'
    assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
  endif
-%}

<slideshow-component class="section__i-banner gradient spacing spacing-xs color-{{ section.settings.color_scheme }}{% if section.settings.mobile_color_scheme == 'custom' %} gradient-xs{% endif %} style-banner--{{ section.settings.type_style }} d-block"
  style="--padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --padding-top-xs: {{ section.settings.padding_top_mobile }}px;
    --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;
    --media-opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
    --color-opacity: {{ section.settings.color_overlay_opacity.red }},{{ section.settings.color_overlay_opacity.green }},{{ section.settings.color_overlay_opacity.blue }};
  {% if section.settings.mobile_color_scheme == 'custom' %}
    --color-foreground-xs: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
    --color-background-xs: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
    --gradient-background-xs: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};
  {% endif %}" 
>
  <div class="{{ section.settings.section_width }} m-auto{% if section.settings.section_width == 'full-width' %} p-banner{% endif %}"{% if section.settings.section_width == 'customized-width' %} style="--page-width:{{ section.settings.customize_width }}px;"{% endif %}>
    
    <div id="Banner-{{ section.id }}" class="banner rounded-ovh d-flex f-wrap pos-relative i-padding i-padding-md i-padding-lg i-padding-xs banner__media-hover{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
      style="
        --i-padding: {% if section.settings.image != blank %}{{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}{% else %}56{% endif %}%;
        --padding-image-xs: {{ section.settings.mobile_row_height }}%;
        {% if section.settings.custom_rouded %}
          --block-rounded: {{ section.settings.custom_block_rouded | divided_by: 10.0 }}rem;
        {% endif %}
        "
    >
      <animate-element animate-element class="products_images pos-absolute top-0 left-0 w-100 h-100 z-index-2 o-h">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'decor' -%}
              {% comment %} thumbnail images {% endcomment %}
              <div class="image-decor pos-absolute">
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 3840 | image_tag:
                    loading: 'lazy',
                    width: block.settings.image.width,
                    height: image_height,
                    class: image_class,
                    sizes: full_width,
                    widths: widths
                  }}
                {%- else -%}
                  {%- liquid
                    assign index = forloop.index
                    if index > 6
                      assign index = index | modulo: 6 | plus: 1
                    endif
                  -%}
                  {{ 'product-' | append: index | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </animate-element>
      <{% if section.settings.image_behavior == 'parallax-scroll' %}parallax-container{% else %}div{% endif %} class="banner__media media media--transparent d-block o-h w-100 h-100 pos-absolute top-0 left-0{% if section.settings.content_inside_image_mobile != true %} pos-relative-xs{% endif %}{% if section.settings.image != blank and section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
        {% if section.settings.image_behavior == 'parallax-scroll' %}data-parallax-container="data-parallax-container"{% endif %}
      >
        {%- if section.settings.image != blank -%}
          {% if section.settings.image_behavior == 'parallax-scroll' %}
            {%- capture data-parallax -%}data-parallax{%- endcapture -%}
          {% endif %}
          {{ section.settings.image | image_url: width: 3840 | image_tag:
            loading: 'lazy',
            width: section.settings.image.width,
            height: image_height,
            class: image_class,
            sizes: full_width,
            widths: widths,
            data-parallax: data-parallax
          }}
        {%- else -%}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg w-100 h-100' }}
        {%- endif -%}
      </{% if section.settings.image_behavior == 'parallax-scroll' %}parallax-container{% else %}div{% endif %}>
      {%- if section.blocks.size > 0 -%}
        {%- liquid
          capture icon_caret
            render 'icon-caret'
          endcapture
        -%}
        <div class="banner__content banner__content--{{ section.settings.desktop_content_position }} d-flex a-i-center j-c-center f-shrink f-grow pos-relative w-100 z-index-2 o-h{% if section.settings.content_inside_image_mobile != true %} pos-relative-xs{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          <animate-element class="banner__box d-flex f-column j-c-center w-100 h-100 {{ section.settings.desktop_content_alignment }} {{ section.settings.mobile_content_alignment }}-xs"
            style="{% if section.settings.custom_content_max_width %}--content-max-width: {{ section.settings.content_max_width | divided_by: 10 | append: 'rem' }};{% endif %}"
          >
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'heading' -%}
                  {%- if block.settings.heading != blank -%}
                    <h2 class="banner__heading {{ block.settings.heading_size | prepend: 'heading-size-' }} element-spacing element-spacing-all m-0 data__media-hover" data-animate="{{ section.settings.text_animation }}" {{ block.shopify_attributes }}
                      style="--padding-top: {{ block.settings.padding_top }}px;
                        --padding-bottom: {{ block.settings.padding_bottom }}px;
                        --a-delay: {{ '0.2' | times: forloop.index }}s;"
                    >{{ block.settings.heading | escape }}</h2>
                  {%- endif -%}
                {%- when 'text' -%}
                  {%- if block.settings.text != blank -%}
                    <div class="banner__text {{ block.settings.text_size | prepend: 'text-size-' }} rte element-spacing element-spacing-all data__media-hover" data-animate="{{ section.settings.text_animation }}" {{ block.shopify_attributes }}
                      style="--padding-top: {{ block.settings.padding_top }}px;
                        --padding-bottom: {{ block.settings.padding_bottom }}px;
                        --a-delay: {{ '0.2' | times: forloop.index }}s;"
                    >{{ block.settings.text }}</div>
                  {%- endif -%}
                {%- when 'countdown' -%}
                  {%- if block.settings.time != blank -%}
                    <div class="banner__countdown hidden data__media-hover"
                      style="--color-foreground: {{ block.settings.colors_text.red }}, {{ block.settings.colors_text.green }}, {{ block.settings.colors_text.blue }};
                        --color-background: {{ block.settings.colors_background.red }}, {{ block.settings.colors_background.green }}, {{ block.settings.colors_background.blue }};
                        --gradient-background: {% if block.settings.gradient_background != blank %}{{ block.settings.gradient_background }}{% else %}{{ block.settings.colors_background }}{% endif %};
                        --padding-top: {{ block.settings.padding_top }}px;
                        --padding-bottom: {{ block.settings.padding_bottom }}px;
                        --a-delay: {{ '0.2' | times: forloop.index }}s;"
                        data-animate="{{ section.settings.text_animation }}" {{ block.shopify_attributes }}
                    >
                      <count-down class="d-block element-spacing element-spacing-all" data-countdown="{{ block.settings.time }}" data-type="banner">
                        <div class="countdown d-flex a-i-center j-c-center gradient pos-relative o-h m-auto"></div>
                      </count-down>
                    </div>
                  {%- endif -%}
                {%- when 'buttons' -%}
                  {%- if block.settings.primary_button_label != blank or block.settings.secondary_button_label != blank -%}
                    <div class="banner__buttons break d-flex f-wrap g-gap element-spacing element-spacing-all data__media-hover j-c-{{ section.settings.desktop_content_alignment | replace: 'left', 'start' | replace: 'right', 'end' }} j-c-{{ section.settings.mobile_content_alignment | replace: 'left', 'start' | replace: 'right', 'end' }}-xs" data-animate="{{ section.settings.text_animation }}" {{ block.shopify_attributes }}
                      style="--padding-top: {{ block.settings.padding_top }}px;
                        --padding-bottom: {{ block.settings.padding_bottom }}px;
                        --g-gap: 1rem;
                        --a-delay: {{ '0.2' | times: forloop.index }}s;"
                    >
                      {%- if block.settings.primary_button_label != blank -%}
                        {%- if settings.enable_animated_cursor -%}
                          <a{% if block.settings.primary_button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.primary_button_link }}"{% endif %} class="cursor-fixed__parallax-target d-inline-block pos-relative">
                            <span class="cursor-fixed__parallax-inner d-inline-block">
                        {%- endif -%}
                          <{% if settings.enable_animated_cursor %}span{% else %}a{% if block.settings.primary_button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.primary_button_link }}"{% endif %}{% endif %} class="button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }}{% if block.settings.button_transparent == 'transparent' %} button--transparent{% endif %}"
                          >
                            <span class="text">{{- block.settings.primary_button_label | escape -}}</span>
                            {% render 'button-main-style' %}
                          </{% if settings.enable_animated_cursor %}span{% else %}a{% endif %}>
                        {%- if settings.enable_animated_cursor -%}
                            </span>
                          </a>
                        {%- endif -%}
                      {%- endif -%}
                      {%- if block.settings.secondary_button_label != blank -%}
                        {%- if settings.enable_animated_cursor -%}
                          <a{% if block.settings.secondary_button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.secondary_button_link }}"{% endif %} class="cursor-fixed__parallax-target d-inline-block pos-relative">
                            <span class="cursor-fixed__parallax-inner d-inline-block">
                        {%- endif -%}
                          <{% if settings.enable_animated_cursor %}span{% else %}a{% if block.settings.secondary_button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.secondary_button_link }}"{% endif %}{% endif %} class="button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }}{% if block.settings.button_transparent == 'transparent' %} button--transparent{% endif %}">
                            <span class="text">{{- block.settings.secondary_button_label | escape -}}</span>
                            {% render 'button-main-style' %}
                          </{% if settings.enable_animated_cursor %}span{% else %}a{% endif %}>
                        {%- if settings.enable_animated_cursor -%}
                            </span>
                          </a>
                        {%- endif -%}
                      {%- endif -%}
                    </div>
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </animate-element>
        </div>
      {%- endif -%}
    </div>
  </div>
</slideshow-component>

