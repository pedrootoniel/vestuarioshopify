{%- unless settings.show_multitasking_bar -%}
    {{ 'component-multitasking-bar.css' | asset_url | stylesheet_tag }}
{%- endunless -%}
{%- liquid
    assign column = section.settings.columns_desktop
    case column
    when 6
        assign column_xxl = '6'
        assign column_xl = '5'
        assign column_lg = '4'
        assign column_md = '3'
        assign column_sm = '2'
    when 5
        assign column_xxl = '5'
        assign column_xl = '5'
        assign column_lg = '4'
        assign column_md = '3'
        assign column_sm = '2'
    when 4
        assign column_xxl = '4'
        assign column_xl = '4'
        assign column_lg = '4'
        assign column_md = '3'
        assign column_sm = '2'
    when 3
        assign column_xxl = '3'
        assign column_xl = '3'
        assign column_lg = '2'
        assign column_md = '2'
        assign column_sm = '2'
    endcase
    assign column_xs = section.settings.columns_mobile | default: 1
    capture icon_arrow_list
        render 'icon-arrow-list'
    endcapture
-%}
<div class="section__f-collection section__recently-product spacing spacing-xs pos-relative color-{{ section.settings.color_scheme }} gradient no-js-hidden"
    style="--padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --padding-top-xs: {{ section.settings.padding_top_mobile }}px;
    --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;"
>
    <div class="recently-products d-block">
        <div class="page-width m-auto">
            {%- if section.settings.heading != blank -%}
                <div class="p-w__header m-spacing"
                    style="--m-spacing-b: {{ section.settings.heading_margin_bottom }}px;"
                >
                    <div class="p-w__header--wrapper center">
                        <h2 id="SectionHeading-{{ section.id }}" class="p-w__heading heading-size-default m-0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                            {{ section.settings.heading | escape }}
                        </h2>
                    </div>
                </div>
            {%- endif -%}
            <recently-viewed-products class="p-w__content" id="recently-viewed-products" data-handle="{{ product.handle }}" data-template="product" data-step="3" data-number="0"
                data-image-ratio="{{ settings.card_image_ratio }}"
                data-secondary-image="{{ settings.show_secondary_image }}"
                data-vendor="{{ settings.show_vendor_product }}"
                data-vendor-mobile= "{{ settings.show_vendor_mobile }}"
                data-rating="{{ settings.show_rating_product }}"
                data-rating-mobile= "{{ settings.show_rating_mobile }}"
                data-quick-add="{{ settings.enable_quick_add }}"
                data-quick-add-mobile= "{{ settings.enable_quick_add_mobile }}"
                data-swatch="{{ settings.show_swatch }}"
                data-swatch-mobile= "{{ settings.show_swatch_mobile }}"
            >
                <slider-component class="carousel d-block pos-relative swiper-more-item{% if section.settings.carousel_infinite_scroll %} infinite-scroll{% endif %}" 
                    data-space-between="{{ section.settings.spacing_mobile }}" data-space-between-tablet="{{ section.settings.spacing_tablet }}" data-space-between-desktop="{{ section.settings.spacing_desktop }}"
                    data-type-pagination="{{ section.settings.pagination_type }}" 
                    data-item-xxl="{{ column_xxl }}" 
                    data-item-xl="{{ column_xl }}" 
                    data-item-lg="{{ column_lg }}" 
                    data-item-md="{{ column_md }}" 
                    data-item-sm="{{ column_sm }}" 
                    data-item-xs="{{ column_xs }}"
