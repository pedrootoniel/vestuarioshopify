{%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
  {{ 'component-facets.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{{ 'component-predictive-search.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign sort_by = search.sort_by | default: search.default_sort_by
  assign terms = search.terms | escape
  assign search_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
  if search.filters == empty or section.settings.enable_filtering == false or section.settings.filter_type != 'vertical'
    assign column_lg = '4'
    assign column_md = '3'
  endif

  if settings.enable_quick_add or settings.enable_quick_add_mobile
    assign files = files | append: ', main-search.js, quick-add.js, product-form.js'
  endif
  assign files = files | split: ', '
  render 'theme-loader', files: files
-%}
<div class="section__m-search spacing color-{{ section.settings.color_scheme }} gradient"
  style="--padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --padding-top-xs: {{ section.settings.padding_top_mobile }}px;
    --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;"
>
  <div class="page-width m-auto">
    <div class="p-w__header">
      <div class="p-w__header--wrapper left">
        {% render 'breadcrumb',
          padding_top: '1.5rem',
          padding_bottom: '0.5rem',
          alignment: 'start'
        %}
        <h1 class="p-w__heading p-w__heading--page f-bold heading-size-small m-0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {%- if search.performed -%}
            {{- 'templates.search.title' | t -}}
          {%- else -%}
            {{- 'general.search.search' | t -}}
          {%- endif -%}
        </h1>
      </div>
    </div>
    <div class="p-w__content{% unless search.performed and search.results_count > 0 %} p-w__content--empty{% endunless %}">
      <div class="search__container m-auto m-w m-b" style="--m-w: 50rem; --m-b: 2rem;">
        {%- if settings.predictive_search_enabled -%}
          <predictive-search class="search-modal__form d-block pos-relative" data-loading-text="{{ 'accessibility.loading' | t }}">
        {%- endif -%}
          <main-search class="predictive-search__popup">
            <div id="Popup-Overlay-Search" class="drawer__overlay pos-fixed top-0 left-0 right-0 bottom-0 c-pointer"></div>
            <form action="{{ routes.search_url }}" method="get" role="search" class="search">
              <div class="field field-bg f-a-none d-flex w-100 pos-relative">
                <input
                  class="search__input field__input field__input--bg"
                  id="Search-In-Template"
                  type="search"
                  name="q"
                  value="{{ search.terms | escape }}"
                  placeholder="{{ 'general.search.search' | t }}"
                  {%- if settings.predictive_search_enabled -%}
                    role="combobox"
                    aria-expanded="false"
                    aria-owns="predictive-search-results"
                    aria-controls="predictive-search-results"
                    aria-haspopup="listbox"
                    aria-autocomplete="list"
                    autocorrect="off"
                    autocomplete="off"
                    autocapitalize="off"
                    spellcheck="false"
                  {%- endif -%}
                >
                <label class="field__label field__label--fixed pos-absolute e-none subrte" for="Search-In-Template">{{ 'general.search.search' | t }}</label>
                <input name="options[prefix]" type="hidden" value="last">

                {%- if settings.predictive_search_enabled -%}
                  <div class="predictive-search predictive-search--search-template cus-scrollbar" tabindex="-1" data-predictive-search>
                    <div class="predictive-search__loading-state">
                      <svg aria-hidden="true" focusable="false" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                        <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                      </svg>
                    </div>
                  </div>

                  <span class="predictive-search-status visually-hidden" role="status" aria-hidden="true"></span>
                {%- endif -%}

                <button type="submit" class="search__button field__button pos-absolute pos-absolute-c-r d-flex a-i-center j-c-center t-button b-none c-pointer p-0 o-h" aria-label="{{ 'general.search.search' | t }}">
                  {% render 'icon-search', style_icon: 'basic' %}
                </button>
              </div>
              <button type="reset" class="reset__button link u-link link--style-line t-button b-none c-pointer bg-transparent p-0 m-t{% if search.terms == blank %} hidden{% endif %}" aria-label="{{ 'general.search.reset' | t }}" style="--m-t: 1.5rem;">
                <span class="link-style">{{ 'general.search.reset' | t }}</span>
              </button>
            </form>
          </main-search>
        {%- if settings.predictive_search_enabled -%}
          </predictive-search>
        {%- endif -%}
        {%- if search.performed -%}
          <div class="search__status center m-t">
            {%- unless section.settings.enable_filtering or section.settings.enable_sorting -%}
              {%- if search.results_count > 0 -%}
                <p role="status" class="m-t" style="--m-t: 1.5rem;">{{ 'templates.search.results_with_count_and_term' | t: terms: search.terms, count: search.results_count }}</p>
              {%- endif -%}
            {%- endunless -%}
            {%- if search.results_count == 0 and search.filters == empty -%}
              <p role="status" style="--m-t: 1.5rem;">{{ 'templates.search.no_results' | t: terms: search.terms }}</p>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
      {%- if search.performed -%}
        <div{% if search.filters != empty %} class="facets-{{ section.settings.filter_type }} clearfix"{% endif %}>
          {%- if search.filters != empty -%}
            {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
              <aside aria-labelledby="verticalTitle" class="facets-wrapper facets-wrapper__{{ section.settings.filter_type }}{% unless section.settings.enable_filtering %} facets-wrapper--no-filters pos-relative w-100{% endunless %}" id="main-search-filters" data-id="{{ section.id }}">
                {% render 'facets',
                  results: search,
                  enable_filtering: section.settings.enable_filtering,
                  enable_sorting: section.settings.enable_sorting,
                  filter_type: section.settings.filter_type,
                  swatch: section.settings.swatch,
                  pill: section.settings.pill
                %}
              </aside>
            {%- endif -%}
          {%- endif -%}
          <div class="product-grid-container" id="ProductGridContainer">
            {%- if section.settings.enable_sorting and section.settings.filter_type == 'vertical' and search.filters != empty -%}
              <facet-filters-form class="facets facets-vertical-sort d-none-xs no-js-hidden">
                <form class="facets-vertical-form d-flex j-c-between a-i-center" id="FacetSortForm">
                  <div class="product-count-vertical" role="status">
                    <h2 class="product-count__text m-0 text-body">
                      <span id="ProductCountDesktop">
                        {%- if search.results_count -%}
                          {{ 'templates.search.results_with_count' | t: terms: search.terms, count: search.results_count }}
                        {%- elsif search.products_count == search.all_products_count -%}
                          {{ 'products.facets.product_count_simple' | t: count: search.products_count }}
                        {%- else -%}
                          {{ 'products.facets.product_count' | t: product_count: search.products_count, count: search.all_products_count }}
                        {%- endif -%}
                      </span>
                    </h2>
                  </div>

                  <div class="facet-filters sorting">
                    <div class="product-sorting sorting--{{ section.settings.sorting_style }} facet-filters__field d-flex j-c-end{% if section.settings.sorting_style == 'text-outside' %} a-i-center c-gap{% endif %}"
                      data-index="{{ forloop.index }}"
                      {%- if section.settings.sorting_style == 'text-outside' -%}
                        style="--c-gap: 1rem;"
                      {%- endif -%}
                    >
                      {%- assign sort_by = search.sort_by | default: search.default_sort_by -%}
                      {%- if section.settings.sorting_style == 'text-outside' -%}
                        <span for="SortBy-mobile" class="d-flex j-c-start a-i-center uppercase f-shrink">
                          {{ 'products.facets.sort_by_label_2' | t }}
                        </span>
                      {%- endif -%}
                      <details class="product-filter-sorting disclosure-has-popup facets__disclosure pos-relative">
                        <summary class="facets__summary pos-relative c-pointer list-unstyled">
                          <span for="SortBy-mobile" class="d-flex j-c-start a-i-center{% if section.settings.sorting_style == 'default' %} uppercase{% elsif section.settings.sorting_style == 'text-inside' %} c-gap{% endif %} f-shrink"
                            {% if section.settings.sorting_style == 'text-inside' %}
                              style="--c-gap: 0.5rem;"
                            {% endif %}
                          >
                            {%- if section.settings.sorting_style == 'default' -%}
                              {{ 'products.facets.sort_by_label_2' | t }}
                            {%- elsif section.settings.sorting_style == 'text-inside' -%}
                              {{ 'products.facets.sort_by_label' | t }}
                            {%- endif -%}
                            {%- if section.settings.sorting_style != 'default' -%}
                              {%- for option in search.sort_options -%}
                                {% if option.value == sort_by %}
                                  <span class="label sorting-label">{{ option.name | escape }}</span>
                                {% endif %}
                              {%- endfor -%}
                            {% endif %}
                            {{ icon_caret }}
                          </span>
                        </summary>
                        <div class="facets-sorting__display">
                          <ul class="facets__list list-unstyled" role="list">
                            {%- for option in search.sort_options -%}
                              <li class="list-menu__item facets__item">
                                <label for="Filter-desktop-{{ option.value | escape }}-{{ forloop.index }}" class="facet-checkbox u-none h-link link--style-line">
                                  <input type="radio" name="sort_by" value="{{ option.value | escape }}" id="Filter-desktop-{{ option.value | escape }}-{{ forloop.index }}" {% if option.value == sort_by %} selected="selected" checked="checked"{% endif %} class="visually-hidden"/>
                                  <span class="label sorting-label text link-style">{{ option.name | escape }}</span>
                                </label>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      </details>
                    </div>
                    <noscript>
                      <button type="submit" class="facets__button-no-js button button--secondary {{ settings.button_style | prepend: 'button--style-' }}">
                        <span>{{ 'products.facets.sort_button' | t }}</span>
                      </button>
                    </noscript>
                  </div>
                </form>
              </facet-filters-form>
            {%- endif -%}
            {%- if search.results.size == 0 and search.filters != empty -%}
              <div class="template-search__results collection collection--empty{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}" id="product-grid" data-id="{{ section.id }}">
                <div class="loading-overlay gradient"></div>
                <div class="title-wrapper center">
                  <h2 class="title">
                    {{ 'sections.collection_template.empty' | t }}<br>
                    {{ 'sections.collection_template.use_fewer_filters_html' | t: link: search_url, class: "u-link link u-u" }}
                  </h2>
                </div>
              </div>
            {%- else -%}
              {%- paginate search.results by 24 -%}
                <div class="template-search__results collection pos-relative" id="product-grid" data-id="{{ section.id }}">
                  <div class="loading-overlay pos-absolute top-0 left-0 bottom-0 w-100 d-none gradient"></div>
                  <ul class="product-grid d-flex f-wrap grid list-unstyled" role="list" style="--c-xs: 1; --c-sm: 2; --c-md: {{ column_md | default: '2' }}; --c-lg: {{ column_lg | default: '3' }}; --grid-v-xs: 1.5rem; --grid-v-sm: 3rem; --grid-v-md: 4.5rem; --grid-h-lg: 3rem;">
                    {%- for item in search.results -%}
                      {%- assign lazy_load = false -%}
                      {%- if forloop.index > 2 -%}
                        {%- assign lazy_load = true -%}
                      {%- endif -%}
                      <li class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
                        {%- case item.object_type -%}
                          {%- when 'product' -%}
                            {% render 'card-product',
                              card_product: item,
                              media_aspect_ratio: settings.card_image_ratio,
                              show_secondary_image: settings.show_secondary_image,
                              show_vendor: settings.show_vendor_product,
                              show_vendor_mobile: settings.show_vendor_mobile,
                              show_rating: settings.show_rating_product,
                              show_rating_mobile: settings.show_rating_mobile,
                              show_quick_add: settings.enable_quick_add,
                              show_quick_add_mobile: settings.enable_quick_add_mobile,
                              show_swatch: settings.show_swatch,
                              show_swatch_mobile: settings.show_swatch_mobile,
                              card_button_text_size: settings.card_button_text_size,
                              card_button_type: settings.card_button_type,
                              card_button_transform: settings.card_button_transform,
                              lazy_load: lazy_load
                            %}
                          {%- when 'article' -%}
                            {% render 'article-card',
                              article: item,
                              show_date: section.settings.article_show_date,
                              show_author: section.settings.article_show_author,
                              show_badge: true,
                              media_aspect_ratio: 1,
                              lazy_load: lazy_load
                            %}
                          {%- when 'page' -%}
                            {% render 'page-card',
                              page: item,
                              show_badge: true
                            %}
                        {%- endcase -%}
                      </li>
                    {%- endfor -%}
                  </ul>
                  {%- if paginate.pages > 1 -%}
                    {% render 'pagination', paginate: paginate %}
                  {%- endif -%}
                </div>
              {%- endpaginate -%}
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
{%- liquid
  if section.settings.enable_filtering or section.settings.enable_sorting
    assign files = "main-search.js, facets.js" | split: ', '
  else
    assign files = "main-search.js" | split: ', '
  endif
  render 'theme-loader', files: files
-%}
{% schema %}
{
  "name": "t:sections.main-search.name",
  "tag": "section",
  "class": "section",
  "settings": [
  {
    "type": "header",
    "content": "t:sections.main-search.settings.header__1.content"
  },
  {
    "type": "checkbox",
    "id": "enable_filtering",
    "default": true,
    "label": "t:sections.main-collection-product-grid.settings.enable_filtering.label",
    "info": "t:sections.main-collection-product-grid.settings.enable_filtering.info"
  },
  {
    "type": "select",
    "id": "filter_type",
    "options": [
    {
      "value": "horizontal",
      "label": "t:sections.main-collection-product-grid.settings.filter_type.options__1"
    },
    {
      "value": "vertical",
      "label": "t:sections.main-collection-product-grid.settings.filter_type.options__2"
    },
    {
      "value": "drawer",
      "label": "t:sections.main-collection-product-grid.settings.filter_type.options__3"
    }],
    "default": "horizontal",
    "label": "t:sections.main-collection-product-grid.settings.filter_type.label",
    "info": "t:sections.main-collection-product-grid.settings.filter_type.info"
  },
  {
    "type": "checkbox",
    "id": "enable_sorting",
    "default": true,
    "label": "t:sections.main-collection-product-grid.settings.enable_sorting.label"
  },
  {
    "type": "select",
    "id": "sorting_style",
    "options": [
    {
      "value": "default",
      "label": "t:sections.main-collection-product-grid.settings.enable_sorting.style.options__1"
    },
    {
      "value": "text-inside",
      "label": "t:sections.main-collection-product-grid.settings.enable_sorting.style.options__2"
    },
    {
      "value": "text-outside",
      "label": "t:sections.main-collection-product-grid.settings.enable_sorting.style.options__3"
    }],
    "default": "default",
    "label": "t:sections.main-collection-product-grid.settings.enable_sorting.style.label"
  },
  {
    "type": "text",
    "id": "swatch",
    "label": "t:sections.main-collection-product-grid.settings.swatch.label",
    "default": "Color"
  },
  {
    "type": "text",
    "id": "pill",
    "label": "t:sections.main-collection-product-grid.settings.pill.label",
    "default": "Size"
  },
  {
    "type": "header",
    "content": "t:sections.main-search.settings.header__2.content",
    "info": "t:sections.main-search.settings.header__2.info"
  },
  {
    "type": "checkbox",
    "id": "article_show_date",
    "default": true,
    "label": "t:sections.main-search.settings.article_show_date.label"
  },
  {
    "type": "checkbox",
    "id": "article_show_author",
    "default": false,
    "label": "t:sections.main-search.settings.article_show_author.label"
  },
  {
    "type": "color_scheme",
    "id": "color_scheme",
    "label": "t:sections.all.colors.label",
    "default": "background-1"
  },
  {
    "type": "header",
    "content": "t:sections.all.padding.section_padding_heading"
  },
  {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 36
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 36
  }]
}
{% endschema %}
