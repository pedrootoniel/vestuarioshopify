{%- liquid
    capture icon_arrow_list
        render 'icon-arrow-list'
    endcapture
    capture icon_arrow
        render 'icon-arrow'
    endcapture
-%}
<div class="section__cate-slide spacing spacing-xs color-{{ section.settings.color_scheme }} gradient pos-relative o-h"
    style="
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --padding-top-xs: {{ section.settings.padding_top_mobile }}px;
    --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;
    {% if section.settings.use_custom_color %}
    --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
    --color-background: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
    --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};
    {% endif %}
    "
>
    <{% if section.settings.image_behavior == 'parallax-scroll' %}parallax-container{% else %}div{% endif %} class="position-bg pos-absolute top-0 left-0 w-100 h-100 e-none o-h{% if section.settings.image_background != blank and section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
        {% if section.settings.image_behavior == 'parallax-scroll' %}data-parallax-container="data-parallax-container"{% endif %}   
    >
        {%- if section.settings.image_background != blank -%}
            {% if section.settings.image_behavior == 'parallax-scroll' %}
                {%- capture data-parallax -%}data-parallax{%- endcapture -%}
            {% endif %}
            {{ section.settings.image_background | image_url: width: 3840 | image_tag:
                loading: 'lazy',
                sizes: sizes,
                widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                class: 'motion-reduce',
                data-parallax: data-parallax
            }}
        {%- else -%}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg d-none d-block-md w-100 h-100' }}
        {%- endif -%}
    </{% if section.settings.image_behavior == 'parallax-scroll' %}parallax-container{% else %}div{% endif %}>
    <div class="{{ section.settings.section_width }} m-auto{% if section.settings.section_width == 'full-width' %} p-banner{% endif %}"{% if section.settings.section_width == 'customized-width' or section.settings.section_width == 'full-width' %} style="{% if section.settings.section_width == 'customized-width' %}--page-width: {{ section.settings.customize_width }}px;{% else %}--padding-width: 0rem;--padding-grid-scroll: -1rem;{% endif %}"{% endif %}>
        <div class="container">
            <category-slide class="cate-slide__wrap d-flex f-wrap pos-relative">
                <div class="cate-slide__col cate-slide__textbox">
                    {%- if section.settings.heading != blank -%}
                        <h2 class="cate-slide__heading {{ section.settings.heading_size | prepend: 'heading-size-' }} m-spacing" style="--m-spacing-b: 1.6rem;">
                            {{ section.settings.heading | escape }}
                        </h2>
                    {%- endif -%}
                    {%- if section.settings.description != blank -%}
                        <div class="cate-slide__description {{ section.settings.description_size | prepend: 'text-size text-size-' }} m-spacing" style="--m-spacing-b: 4rem;">
                            {{ section.settings.description }}
                        </div>
                    {%- endif -%}
                    {%- if section.settings.button_label != blank -%}
                        <div class="cate-slide__button">
                            {%- if section.settings.button_label != blank -%}
                                <a class="button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }} {% if section.settings.button_style == 'transparent' %} button--transparent{% endif %}"{% if section.settings.button_link == blank %} role="link" aria-disabled="true" {% else %} href="{{ section.settings.button_link }}"{% endif %}>
                                    <span class="text">{{ section.settings.button_label | escape }}</span>
                                    {% render 'button-main-style' %}
                                </a>
                            {%- endif -%}
                        </div>
                    {%- endif -%}
                </div>
                <div class="cate-slide__col cate-slide__image">
                    <div class="swiper-box ml-auto">
                        <div class="swiper grid-scroll d-block pos-relative no-js-grid-scroll no-js-overflow-x">
                            <div class="swiper-wrapper">
                                {%- for block in section.blocks -%}
                                    {%- liquid
                                        assign total = forloop.index | modulo: 2
                                        if total == 0
                                            assign image_type = 'image-left'
                                        else
                                            assign image_type = 'image-right'
                                        endif
                                    -%}
                                    <div class="swiper-slide image-item d-flex a-i-center no-js-grid__item no-js-grid__scroll" role="listitem" id="Slide-{{ section.id }}-{{ forloop.index }}">
                                        <div class="image-inner {{ image_type }}">
                                            <div class="image-wrap d-flex">
                                                <div class="image image-1">
                                                    {%- if block.settings.image_first != blank -%}
                                                        {%- assign image_alt = block.settings.image_first.alt | default: shop.name | escape -%}
                                                        {{ block.settings.image_first | image_url: width: 3840 | image_tag:
                                                            loading: 'lazy',
                                                            sizes: sizes,
                                                            alt: image_alt,
                                                            widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                                                            class: 'd-none d-block-md motion-reduce'
                                                        }}
                                                    {%- else -%}
                                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder-svg-dark d-none d-block-md w-100 h-100' }}
                                                    {%- endif -%}

                                                    {%- if block.settings.image_first != blank -%}
                                                        {%- assign image_alt = block.settings.image_first.alt | default: shop.name | escape -%}

                                                        {{ block.settings.image_first | image_url: width: block.settings.image_first.width | image_tag:
                                                            loading: 'lazy',
                                                            widths: '750',
                                                            sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                                                            alt: image_alt,
                                                            class: 'image-mobile d-block d-none-md motion-reduce'
                                                        }}
                                                    {%- else -%}
                                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder-svg-dark d-block d-none-md w-100 h-100' }}
                                                    {%- endif -%}
                                                </div>
                                                <div class="image image-2">
                                                    {%- assign image_alt = block.settings.image_second.alt | default: shop.name | escape -%}
                                                    {%- if block.settings.image_second != blank -%}
                                                        {{ block.settings.image_second | image_url: width: 3840 | image_tag:
                                                            loading: 'lazy',
                                                            sizes: sizes,
                                                            alt: image_alt,
                                                            widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                                                            class: 'd-none d-block-md motion-reduce'
                                                        }}
                                                    {%- else -%}
                                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder-svg-dark d-none d-block-md w-100 h-100' }}
                                                    {%- endif -%}

                                                    {%- if block.settings.image_second != blank -%}
                                                        {{ block.settings.image_second | image_url: width: block.settings.image_second.width | image_tag:
                                                            loading: 'lazy',
                                                            widths: '750',
                                                            sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                                                            alt: image_alt,
                                                            class: 'image-mobile d-block d-none-md motion-reduce'
                                                        }}
                                                    {%- else -%}
                                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder-svg-dark d-block d-none-md w-100 h-100' }}
                                                    {%- endif -%}
                                                </div>
                                                <div class="image image-3">
                                                    {%- assign image_alt = block.settings.image_third.alt | default: shop.name | escape -%}
                                                    {%- if block.settings.image_third != blank -%}
                                                        {{ block.settings.image_third | image_url: width: 3840 | image_tag:
                                                            loading: 'lazy',
                                                            sizes: sizes,
                                                            alt: image_alt,
                                                            widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                                                            class: 'd-none d-block-md motion-reduce'
                                                        }}
                                                    {%- else -%}
                                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder-svg-dark d-none d-block-md w-100 h-100' }}
                                                    {%- endif -%}

                                                    {%- if block.settings.image_third != blank -%}
                                                        {{ block.settings.image_third | image_url: width: block.settings.image_third.width | image_tag:
                                                            loading: 'lazy',
                                                            widths: '750',
                                                            sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                                                            alt: image_alt,
                                                            class: 'image-mobile d-block d-none-md motion-reduce'
                                                        }}
                                                    {%- else -%}
                                                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder-svg-dark d-block d-none-md w-100 h-100' }}
                                                    {%- endif -%}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {%- endfor -%}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="cate-slide__pagi w-100 pos-absolute">
                    <div class="swiper grid-scroll d-block pos-relative no-js-grid-scroll no-js-overflow-x" data-item-perview-desktop="{{ section.settings.carousel_number }}" data-item-perview-tablet="{{ section.settings.carousel_number_tablet }}" data-item-perview-mobile="1">
                        <div class="swiper-wrapper">
                            {%- for block in section.blocks -%}
                                <div class="swiper-slide no-js-grid__item no-js-grid__scroll c-pointer center pos-relative" role="listitem" id="Slide-{{ section.id }}-{{ forloop.index }}">
                                    <div class="text f-bold {{ block.settings.description_size | prepend: 'text-size text-size-' }}">
                                        {{ block.settings.heading }}
                                    </div>
                                    <div class="dot b-circle pos-relative mx-auto">
                                        <div class="dot-inner b-circle pos-absolute">
                                            <span></span>
                                        </div>
                                    </div>
                                </div>
                            {%- endfor -%}
                        </div>
                    </div>
                    <div class="carousel__controls arrow-style-{{ settings.arrow_style }} no-js-hidden">
                        {%- if section.settings.arrows_type != 'none' -%}
                            <button type="button" data-step="1" class="button-slider button-slider__prev swiper-screen__{{ section.settings.arrows_type }} button-slider__hover color-arrow t-button b-none c-pointer pos-absolute z-index-2 b-circle p-0 d-flex a-i-center j-c-center swiper-button-prev" aria-label="{{ 'accessibility.previous_slide' | t }}" aria-controls="Slider-{{ section.id }}" name="previous">
                                {{ icon_arrow_list }}
                            </button>
                            <button type="button" data-step="1" class="button-slider button-slider__next swiper-screen__{{ section.settings.arrows_type }} button-slider__hover color-arrow t-button b-none c-pointer pos-absolute z-index-2 b-circle p-0 d-flex a-i-center j-c-center swiper-button-next" aria-label="{{ 'accessibility.next_slide' | t }}" aria-controls="Slider-{{ section.id }}" name="next">
                                {{ icon_arrow_list }}
                            </button>
                        {%- endif -%}
                    </div>
                </div>
            </category-slide>
        </div>
    </div>
</div>
