<div class="section__outs-reviews spacing spacing-xs color-{{ section.settings.color_scheme }} gradient"
    style="
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --padding-top-xs: {{ section.settings.padding_top_mobile }}px;
    --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;
    {% if section.settings.use_custom_color %}
    --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
    --color-background: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
    --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};
    {% endif %}
    "
>
    <div class="{{ section.settings.section_width }} m-auto" {% if section.settings.section_width == 'customized-width' %} style="--page-width: {{ section.settings.customize_width }}px;"{% endif %}>
        <div class="outs-reviews__wrap">
            <div class="outs-reviews__row d-flex f-wrap{% if section.settings.section_width == 'customized-width' and section.settings.customize_width < 1500 %} w-small{% endif %}">
                <div class="outs-reviews__col outs-reviews__media pos-relative w-100{% if section.settings.colors_background_banner %} bg-custom{% endif %}" style="{% if section.settings.colors_background_banner != blank %}--bg-custom:{{ section.settings.colors_background_banner.rgb }};{% endif %}">
                    <div class="banner d-block pos-relative">
                        <div class="banner_main">
                            <div class="media pos-relative d-block o-h w-100 h-100{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                                {% if settings.animations_reveal_on_scroll %}
                                    style="--animation-order: 1; padding-top: {% if section.settings.image_first != blank %}{{ 1 | divided_by: section.settings.image_first.aspect_ratio | times: 100 }}{% else %}56{% endif %}%;"
                                {% else %}  
                                    style="padding-top: {% if section.settings.image_first != blank %}{{ 1 | divided_by: section.settings.image_first.aspect_ratio | times: 100 }}{% else %}56{% endif %}%;"
                                {% endif %}
                            >
                                {%- if section.settings.image_first != blank -%}
                                    {{ section.settings.image_first | image_url: width: 3840 | image_tag:
                                        loading: 'lazy',
                                        width: section.settings.image_first.width,
                                        height: image_height,
                                        class: image_class,
                                        sizes: full_width,
                                        widths: widths
                                    }}
                                {%- else -%}
                                    {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg w-100 h-100' }}
                                {%- endif -%}
                            </div>
                        </div>
                        <div class="banner_sec">
                            <div class="media pos-relative d-block o-h w-100 h-100{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" 
                                {% if settings.animations_reveal_on_scroll %}
                                    style="--animation-order: 3; --ratio-image: {% if section.settings.image_second != blank %}{{ 1 | divided_by: section.settings.image_second.aspect_ratio | times: 100 }}{% else %}56{% endif %}%;"
                                {% else %}  
                                    style="--ratio-image: {% if section.settings.image_second != blank %}{{ 1 | divided_by: section.settings.image_second.aspect_ratio | times: 100 }}{% else %}56{% endif %}%;"
                                {% endif %}
                            >
                                {%- if section.settings.image_second != blank -%}
                                    {{ section.settings.image_second | image_url: width: 3840 | image_tag:
                                        loading: 'lazy',
                                        width: section.settings.image_second.width,
                                        height: image_height,
                                        class: image_class,
                                        sizes: full_width,
                                        widths: widths
                                    }}
                                {%- else -%}
                                    {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg placeholder-svg-dark w-100 h-100' }}
                                {%- endif -%}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="outs-reviews__col outs-reviews__carousel w-100">
                    <div class="carousel-wrap h-100 d-flex f-column j-c-center">
                        {%- if section.settings.heading != blank -%}
                            <h2 class="banner__heading {{ section.settings.heading_size | prepend: 'text-size-' }} uppercase u-u{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                                {{ section.settings.heading | escape }}
                            </h2>
                        {%- endif -%}
                        {%- if section.blocks.size > 0 -%}
                            {%- liquid
                                capture icon_arrow_list
                                    render 'icon-arrow-list'
                                endcapture
                            -%}
                            <slideshow-component class="d-block{% if section.settings.carousel_infinite_scroll %} infinite-scroll{% endif %}" data-type-pagination="{{ section.settings.pagination_type }}" data-speed="{{ section.settings.change_slides_speed }}">
                                <div role="region" aria-roledescription="Testimonials" aria-label="Testimonials" class="slideshow swiper slider">
                                    <div aria-live="polite" aria-atomic="true" id="Slider-{{ section.id }}" class="slideshow__items swiper-wrapper slider__items f-row no-js-overflow-x no-js-scroll-b w-100 d-flex f-row">
                                        {%- for block in section.blocks -%}
                                            <div class="slideshow__item swiper-slide slider__item slider__item--{{ forloop.index }} scroll-s-start mi-w" role="group" aria-roledescription="Slide" aria-label="{{ 'accessibility.slide' | t: index: forloop.index, total: forloop.length }}" tabindex="-1" id="Slide-{{ section.id }}-{{ forloop.index }}" style="--mi-w: 100%;" {{ block.shopify_attributes }}>
                                                <div class="d-flex pos-relative w-100 h-100">
                                                    {%- if block.settings.heading != blank or block.settings.text != blank -%}
                                                        <div class="slider__content d-flex a-i-center j-c-center f-shrink f-grow pos-relative w-100 z-index-2 o-h">
                                                            <animate-element class="slider__content--wrapper d-flex f-column j-c-center w-100 h-100 {{ block.settings.text_alignment }} banner__box">
                                                                <div class="banner__box--wrapper w-100">
                                                                    {%- if block.settings.rating != '0' -%}
                                                                        <div class="banner__info--rating" data-animate="fade-down" style="--a-delay: 0.4s;">
                                                                            <div class="rating d-inline-block" role="img" aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: block.settings.rating, rating_max: 5 }}">
                                                                                <span aria-hidden="true" class="rating-star d-inline-block l-h-1" style="--rating: {{ block.settings.rating }}; --rating-max: 5; --rating-decimal: 0;"></span>
                                                                            </div>
                                                                        </div>
                                                                    {%- endif -%}
                                                                    {%- if block.settings.text != blank -%}
                                                                        <h3 class="banner__text p-w__heading {{ block.settings.heading_size | prepend: 'heading-size-' }} rte m-0" data-animate="fade-down" style="--a-delay: 0.6s;">
                                                                            {{ block.settings.text }}
                                                                        </h3>
                                                                    {%- endif -%}
                                                                    {%- if block.settings.description != blank -%}
                                                                        <div class="banner__desc m-0" data-animate="fade-down" style="--a-delay: 0.8s;">
                                                                            {{ block.settings.description }}
                                                                        </div>
                                                                    {%- endif -%}
                                                                    {%- if block.settings.avatar != blank or block.settings.name != blank -%}
                                                                        <div class="banner__info d-flex f-wrap a-i-center g-gap j-c-{{ block.settings.text_alignment | replace: 'left', 'start' | replace: 'right', 'end' }}" style="--g-gap: 1.5rem;--a-delay: 0.8s;" data-animate="fade-down">
                                                                            {%- if block.settings.avatar != blank -%}
                                                                                <div class="banner__info--avatar">
                                                                                    <div class="avatar media media--adapt media--transparent o-h d-block pos-relative b-circle" style="padding-bottom: {{ 1 | divided_by: block.settings.avatar.aspect_ratio | times: 100 }}%;">
                                                                                        {%- assign alt = block.settings.avatar.alt | default: shop.name | escape -%}
                                                                                        {{ block.settings.avatar | image_url: width: 40, height: 40 | image_tag: alt: alt, loading: 'lazy' }}
                                                                                    </div>
                                                                                </div>
                                                                            {%- endif -%}
                                                                            {%- if block.settings.name != blank -%}
                                                                                <div class="banner__info--name">
                                                                                    {{ block.settings.name | escape }}
                                                                                </div>
                                                                            {%- endif -%}
                                                                        </div>
                                                                    {%- endif -%}
                                                                </div>
                                                            </animate-element>
                                                        </div>
                                                    {%- endif -%}
                                                </div>
                                            </div>
                                        {%- endfor -%}
                                    </div>
                                    {%- if section.blocks.size > 1 -%}
                                        <div class="slideshow__controls arrow-style-{{ settings.arrow_style }} controls-{{ section.settings.pagination_type }} d-flex a-i-center j-c-center w-100 no-js-hidden">
                                            {%- if section.settings.arrows_type != 'none' -%}
                                                <button type="button" class="button-slider button-slider__prev swiper-screen__{{ section.settings.arrows_type }} button-slider__hover color-arrow t-button b-none c-pointer pos-absolute{% if section.settings.pagination_type == 'none'%} pos-relative-xs{% endif %} z-index-2 b-circle p-0 d-flex a-i-center j-c-center swiper-button-prev" aria-label="{{ 'accessibility.previous_slide' | t }}" aria-controls="Slider-{{ section.id }}" name="previous">
                                                    {{ icon_arrow_list }}
                                                </button>
                                            {%- endif -%}
                                            <div class="swiper-pagination swiper-screen__{{ section.settings.enable_pagination_type }} slider-counter pos-relative-xs z-index-1 d-flex a-i-center j-c-center"></div>
                                            {%- if section.settings.arrows_type != 'none' -%}
                                                <button type="button" class="button-slider button-slider__next swiper-screen__{{ section.settings.arrows_type }} button-slider__hover color-arrow t-button b-none c-pointer pos-absolute{% if section.settings.pagination_type == 'none'%} pos-relative-xs{% endif %} z-index-2 b-circle p-0 d-flex a-i-center j-c-center swiper-button-next" aria-label="{{ 'accessibility.next_slide' | t }}" aria-controls="Slider-{{ section.id }}" name="next">
                                                    {{ icon_arrow_list }}
                                                </button>
                                            {%- endif -%}
                                        </div>
                                        <noscript>
                                            <div class="slideshow__controls d-flex a-i-center j-c-center w-100">
                                                <div class="slider-counter pos-absolute pos-relative-xs z-index-2">
                                                    <div class="slider-counter__wrapper d-flex a-i-center j-c-center">
                                                        {%- for block in section.blocks -%}
                                                            <a href="#Slide-{{ section.id }}-{{ forloop.index }}" class="slider-counter__link link link--text u-none" aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}">
                                                                {{ forloop.index }}
                                                            </a>
                                                        {%- endfor -%}
                                                    </div>
                                                </div>
                                            </div>
                                        </noscript>
                                    {%- endif -%}
                                </div>
                            </slideshow-component>
                        {%- endif -%}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
