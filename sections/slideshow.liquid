{%- if section.blocks.size > 0 -%}
  {%- liquid
    capture icon_arrow_list
      render 'icon-arrow-list'
    endcapture
  -%}
  <slideshow-component class="section__slideshow pos-relative z-index-2 d-block color-{{ section.settings.color_scheme }} gradient{% if section.settings.carousel_infinite_scroll %} infinite-scroll{% endif %}{% if section.settings.enable_autoplay %} enable--autoplay{% endif %}"
    data-type-pagination="{{ section.settings.pagination_type }}"
    data-speed="{{ section.settings.change_slides_speed }}"
    style="transform: translate(0px, 0px);"
  >
    <div class="slideshow swiper slider has-banner__content--{{ section.blocks[0].settings.box_align }} position-arrows--{{ section.settings.arrows_position }}"
      role="region" 
      aria-roledescription="{{ 'sections.slideshow.carousel' | t }}" 
      aria-label="{{ section.settings.accessibility_info | escape }}" 
    >
      <div 
        class="slideshow__items swiper-wrapper slider__items f-row no-js-overflow-x no-js-scroll-b {{ section.settings.image_ratio | prepend: "slideshow--ratio-" }} {{ section.settings.image_ratio_mobile | prepend: "slideshow--ratio-mobile-" }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
        id="Slider-{{ section.id }}"
        aria-live="polite" 
        aria-atomic="true" 
      >
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'slide' -%}
              <animate-element 
                class="slideshow__item slide-animation swiper-slide slider__item slider__item--{{ forloop.index }} scroll-s-start mi-w o-h banner__media-hover" 
                role="group" 
                aria-roledescription="Slide" 
                aria-label="{{ 'accessibility.slide' | t: index: forloop.index, total: forloop.length }}" 
                tabindex="-1" 
                id="Slide-{{ section.id }}-{{ forloop.index }}" 
                style="
                  --mi-w: 100%;
                  --media-opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }};
                  --color-opacity: {{ block.settings.color_overlay_opacity.red }},{{ block.settings.color_overlay_opacity.green }},{{ block.settings.color_overlay_opacity.blue }};
                " 
                {{ block.shopify_attributes }}
              >
                {%- if block.settings.heading != blank or block.settings.subheading != blank or block.settings.primary_button_label != blank or block.settings.secondary_button_label != blank -%}
                  <div class="slideshow__width {{ section.settings.section_width }} m-auto pos-absolute pos-absolute-c-c w-100 h-100 z-index-2"{%- if section.settings.section_width == 'customized-width' %} style="--page-width: {{ section.settings.customize_width }}px;"{% endif -%}>
                    <div class="slideshow__content d-flex a-i-center j-c-center f-shrink f-grow w-100 h-100 z-index-2 o-h banner__content--{{ block.settings.box_align }} content--{{ settings.arrow_style }}">
                      <animate-element class="slider__content--wrapper d-flex f-column j-c-center w-100 h-100 {{ block.settings.text_alignment }} slide__box{% if section.settings.pagination_type == 'number' %} pagination--number{% endif %} slide-spacing" 
                        style="
                          --content-max-width: {{ block.settings.content_max_width | divided_by: 10 | append: 'rem' }};
                          --padding-top-bottom: {{ block.settings.padding_top_bottom }}px;
                          --padding-left-right: {{ block.settings.padding_left_right }}px;
                        "
                      >
                        <div class="banner__box--wrapper w-100 data__media-hover">
                          {%- if block.settings.heading != blank -%}
                            <h2 
                              class="banner__heading {{ block.settings.heading_size | prepend: 'heading-size-' }} {{ block.settings.heading_font | prepend: 'typography-' }} m-spacing" 
                              data-animate="fade-down" 
                              style="
                                --a-delay: 0.6s;
                                --m-spacing-t: 0;
                                --m-spacing-b: {{ block.settings.heading_margin_bottom }}px;
                              "
                            >
                              {{ block.settings.heading | escape }}
                            </h2>
                          {%- endif -%}
                          {%- if block.settings.subheading != blank -%}
                            <div 
                              class="banner__text {{ block.settings.subheading_size | prepend: 'text-size-' }} m-spacing" 
                              data-animate="fade-down" 
                              style="
                                --a-delay: 0.8s;
                                --m-spacing-t: 0;
                                --m-spacing-b: {{ block.settings.subheading_margin_bottom }}px;
                              "
                            >
                              {{ block.settings.subheading | escape }}
                            </div>
                          {%- endif -%}
                          {%- if block.settings.primary_button_label != blank or block.settings.secondary_button_label != blank -%}
                            <div 
                              class="banner__buttons break d-inline-flex f-wrap j-c-{{ block.settings.text_alignment | replace: 'left', 'start' | replace: 'right', 'end' }} g-gap f-{{ block.settings.buttons_direction | replace: 'vertical', 'column' | replace: 'horizontal', 'row' }} m-spacing"
                              data-animate="fade-down" 
                              style="--a-delay: 1s;--g-gap: {{ block.settings.button_spacing_between }}px;"
                            >
                              {%- if block.settings.primary_button_label != blank -%}
                                <a class="button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }}{% if block.settings.button_transparent == 'transparent' %} button--transparent{% endif %}"
                                  {% if block.settings.primary_button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.primary_button_link }}"{% endif %}
                                >
                                  <span class="text">{{ block.settings.primary_button_label | escape }}</span>
                                  {% render 'button-main-style' %}
                                </a>
                              {%- endif -%}
                              {%- if block.settings.secondary_button_label != blank -%}
                                <a class="button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }}{% if block.settings.button_transparent == 'transparent' %} button--transparent{% endif %}"
                                  {% if block.settings.secondary_button_link == blank %} 
                                    role="link" aria-disabled="true"
                                  {% else %} 
                                    href="{{ block.settings.secondary_button_link }}"
                                  {% endif %}
                                >
                                  <span class="text">{{ block.settings.secondary_button_label | escape }}</span>
                                  {% render 'button-main-style' %}
                                </a>
                              {%- endif -%}
                            </div>
                          {%- endif -%}
                        </div>
                      </animate-element>
                    </div>
                  </div>
                {%- endif -%}
                <div 
                  data-swiper-parallax="40%"
                  class="slider__image o-h pos-relative slideshow__image d-block w-100 h-100 {{ section.settings.image_ratio | prepend: "image--ratio-" }} {{ section.settings.image_ratio_mobile | prepend: "image--ratio-mobile-" }}
                  {%- if block.settings.mobile_image == blank and block.settings.image == blank %} mask{% endif -%}
                  {%- if forloop.first %} current{% endif -%}
                  {%- if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif -%}"
                >
                  {%- if block.settings.image != blank -%}
                    {%- assign image_alt = block.settings.image.alt | default: shop.name | escape -%}
                    {%- if forloop.index == 1 -%}
                      {{ block.settings.image | image_url: width: block.settings.image.width | image_tag:
                          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                          sizes: '100vw',
                          alt: image_alt,
                          class: 'd-none d-block-md w-100 h-100 o-f-cover motion-reduce'
                      }}
                    {%- else -%}
                      {{ block.settings.image | image_url: width: block.settings.image.width | image_tag:
                          loading: 'lazy',
                          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                          sizes: '100vw',
                          alt: image_alt,
                          class: 'd-none d-block-md w-100 h-100 o-f-cover motion-reduce'
                      }}
                    {%- endif -%}
                  {%- else -%}
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg d-none d-block-md w-100 h-100'}}
                  {%- endif -%}
                  {%- if block.settings.mobile_image != blank -%}
                    {%- assign image_alt = block.settings.mobile_image.alt | default: shop.name | escape -%}
                    {%- if forloop.index == 1 -%}
                      {{ block.settings.mobile_image | image_url: width: block.settings.mobile_image.width | image_tag:
                          widths: '750',
                          sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                          alt: image_alt,
                          class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                      }}
                    {%- else -%}
                      {{ block.settings.mobile_image | image_url: width: block.settings.mobile_image.width | image_tag:
                          loading: 'lazy',
                          widths: '750',
                          sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                          alt: image_alt,
                          class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                      }}
                    {%- endif -%}
                  {%- elsif block.settings.image != blank -%}
                    {%- assign image_alt = block.settings.image.alt | default: shop.name | escape -%}
                    {%- if forloop.index == 1 -%}
                      {{ block.settings.image | image_url: width: block.settings.image.width | image_tag:
                          widths: '750',
                          sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                          alt: image_alt,
                          class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                      }}
                    {%- else -%}
                      {{ block.settings.image | image_url: width: block.settings.image.width | image_tag:
                          loading: 'lazy',
                          widths: '750',
                          sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                          alt: image_alt,
                          class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                      }}
                    {%- endif -%}
                  {%- else -%}
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg d-block d-none-md w-100 h-100'}}
                  {%- endif -%}
                </div>
              </animate-element>
            {%- when 'lookbook' -%}
              <slideshow-lookbook
                class="slideshow__item slideshow__item--lookbook slide-animation swiper-slide slider__item slider-item--{{ forloop.index }} scroll-s-start mi-w o-h banner__media-hover"
                role="group"
                aria-roledescription="Slide"
                aria-label="{{ 'accessibility.slide' | t: index: forloop.index, total: forloop.length }}"
                tabindex="-1"
                id="Slide-{{ section.id }}-{{ forloop.index }}"
                {{ block.shopify_attributes }}
              >
                <div
                  class="slideshow__width {{ section.settings.section_width }} m-auto pos-absolute pos-absolute-c-c w-100 h-100 z-index-2"
                  {%- if section.settings.section_width == 'customized-width' %}
                    style="--page-width: {{ section.settings.customize_width }}px;"
                  {% endif -%}
                >
                  <div class="slideshow__content d-flex a-i-center j-c-center f-shrink f-grow w-100 h-100 z-index-2 o-h banner__content--{{ block.settings.box_align }} content--{{ settings.arrow_style }}">
                    <animate-element
                      class="slider__content--wrapper d-flex f-column j-c-center w-100 h-100 {{ block.settings.text_alignment }} slide__box slide-spacing"
                      style="
                        --content-max-width: {{ block.settings.content_max_width | divided_by: 10 | append: 'rem' }};
                        --padding-top-bottom: {{ block.settings.padding_top_bottom }}px;
                        --padding-left-right: {{ block.settings.padding_left_right }}px;
                      "
                    >
                      <div class="banner__box--wrapper w-100 data__media-hover">
                        {%- if block.settings.primary_button_label != blank -%}
                          <div
                            class="d-block m-spacing"
                            data-animate="fade-down"
                            style="--a-delay: 0.4s;--m-spacing-b: 0.4rem;"
                          >
                            <a
                              class="btn-instant d-inline-flex a-i-center g-gap text-size-xx-small u-none"
                              {% if block.settings.primary_button_link == blank %}
                                role="link" aria-disabled="true"
                              {% else %}
                                href="{{ block.settings.primary_button_link }}"
                              {% endif %}
                              style="--g-gap: .9rem;"
                            >
                              <span class="icon-wrap">{% render 'icon-accordion', icon: block.settings.icon %}</span>
                              <span class="text">{{ block.settings.primary_button_label | escape }}</span>
                            </a>
                          </div>
                        {%- endif -%}
                        {%- if block.settings.heading != blank -%}
                          <h2
                            class="banner__heading {{ block.settings.heading_size | prepend: 'heading-size-' }} {{ block.settings.heading_font | prepend: 'typography-' }} m-spacing"
                            data-animate="fade-down"
                            style="
                              --a-delay: 0.6s;
                              --m-spacing-t: 0;
                              --m-spacing-b: {{ block.settings.heading_margin_bottom }}px;
                            "
                          >
                            {{ block.settings.heading | escape }}
                          </h2>
                        {%- endif -%}
                        {%- if block.settings.subheading != blank -%}
                          <div
                            class="banner__text {{ block.settings.subheading_size | prepend: 'text-size-' }} m-spacing"
                            data-animate="fade-down"
                            style="
                              --a-delay: 0.8s;
                              --m-spacing-t: 0;
                              --m-spacing-b: {{ block.settings.subheading_margin_bottom }}px;
                            "
                          >
                            {{ block.settings.subheading | escape }}
                          </div>
                        {%- endif -%}
                        {%- if block.settings.secondary_button_label != blank -%}
                          <div
                            class="button-sec-wrap m-spacing"
                            data-animate="fade-down"
                            style="--a-delay: 0.8s;--m-spacing-t: 5rem;"
                          >
                            <a
                              class="button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }}{% if block.settings.button_transparent == 'transparent' %} button--transparent{% endif %}"
                              {% if block.settings.secondary_button_link == blank %}
                                role="link" aria-disabled="true"
                              {% else %}
                                href="{{ block.settings.secondary_button_link }}"
                              {% endif %}
                            >
                              <span class="text">{{ block.settings.secondary_button_label | escape }}</span>
                              {% render 'button-main-style' %}
                            </a>
                          </div>
                        {%- endif -%}
                      </div>
                    </animate-element>
                  </div>
                </div>
                <div 
                  data-swiper-parallax="40%"
                  class="
                    slider__image o-h pos-relative slideshow__image d-block w-100 h-100 {{ section.settings.image_ratio | prepend: "image--ratio-" }} {{ section.settings.image_ratio_mobile | prepend: "image--ratio-mobile-" }}
                    {%- if block.settings.mobile_image == blank and block.settings.image == blank %} mask{% endif -%}
                    {%- if forloop.first %} current{% endif -%}
                    {%- if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif -%}
                  "
                >
                  {%- if block.settings.image != blank -%}
                    {%- assign image_alt = block.settings.image.alt | default: shop.name | escape -%}
                    {%- if forloop.index == 1 -%}
                      {{
                        block.settings.image
                        | image_url: width: block.settings.image.width
                        | image_tag:
                          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                          sizes: '100vw',
                          alt: image_alt,
                          class: 'd-none d-block-md w-100 h-100 o-f-cover motion-reduce'
                      }}
                    {%- else -%}
                      {{
                        block.settings.image
                        | image_url: width: block.settings.image.width
                        | image_tag:
                          loading: 'lazy',
                          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                          sizes: '100vw',
                          alt: image_alt,
                          class: 'd-none d-block-md w-100 h-100 o-f-cover motion-reduce'
                      }}
                    {%- endif -%}
                  {%- else -%}
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg d-none d-block-md w-100 h-100' }}
                  {%- endif -%}
                  {%- if block.settings.mobile_image != blank -%}
                    {%- assign image_alt = block.settings.mobile_image.alt | default: shop.name | escape -%}
                    {%- if forloop.index == 1 -%}
                      {{
                        block.settings.mobile_image
                        | image_url: width: block.settings.mobile_image.width
                        | image_tag:
                          widths: '750',
                          sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                          alt: image_alt,
                          class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                      }}
                    {%- else -%}
                      {{
                        block.settings.mobile_image
                        | image_url: width: block.settings.mobile_image.width
                        | image_tag:
                          loading: 'lazy',
                          widths: '750',
                          sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                          alt: image_alt,
                          class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                      }}
                    {%- endif -%}
                  {%- elsif block.settings.image != blank -%}
                    {%- assign image_alt = block.settings.image.alt | default: shop.name | escape -%}
                    {%- if forloop.index == 1 -%}
                      {{
                        block.settings.image
                        | image_url: width: block.settings.image.width
                        | image_tag:
                          widths: '750',
                          sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                          alt: image_alt,
                          class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                      }}
                    {%- else -%}
                      {{
                        block.settings.image
                        | image_url: width: block.settings.image.width
                        | image_tag:
                          loading: 'lazy',
                          widths: '750',
                          sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                          alt: image_alt,
                          class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                      }}
                    {%- endif -%}
                  {%- else -%}
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg d-block d-none-md w-100 h-100' }}
                  {%- endif -%}
                </div>
                <theme-lookbook class="lookbook d-block">
                  {%- assign has_product = false -%}
                  {%- for i in (1..5) -%}
                    {%- capture product -%}product_{{ i }}{%- endcapture -%}
                    {%- capture horizontal -%}horizontal_{{ i }}{%- endcapture -%}
                    {%- capture vertical -%}vertical_{{ i }}{%- endcapture -%}
                    {%- capture position -%}popup_position_{{ i }}{%- endcapture -%}
                    {%- liquid
                      assign product = block.settings[product]
                      assign horizontal = block.settings[horizontal]
                      assign vertical = block.settings[vertical]
                      assign popup_position = block.settings[position]
                    -%}
                    {%- if product != blank -%}
                      {%- assign has_product = true -%}
                      <lookbook-point
                        class="lookbook__point z-index-2 d-block pos-absolute l-h-1 {{ popup_position }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
                        data-side-drawer="#LOOKBOOK-{{ block.id }}-{{ section.id }}"
                        {% if settings.animations_reveal_on_scroll %}
                          style="--animation-order: {{ forloop.index }}; left: {{ horizontal }}%; top: {{ vertical }}%;"
                        {% else %}
                          style="left: {{ horizontal }}%; top: {{ vertical }}%;"
                        {% endif %}
                      >
                        <button
                          class="lookbook__point-button d-block t-button p-0 b-none c-pointer b-circle focus-inset no-js-hidden button-transparent"
                          type="button"
                          aria-haspopup="dialog"
                          aria-label="{{ 'general.lookbook.view' | t: title : product.title }}"
                        >
                          &nbsp;
                          <span class="icon-inner pos-absolute">&nbsp;</span>
                        </button>
                        <noscript>
                          <a
                            href="{{ product.url }}"
                            class="lookbook__point-button d-block t-button c-pointer b-none b-circle u-none color-foreground focus-inset"
                          >
                            <span class="visually-hidden">{{ 'general.lookbook.view' | t: title: product.title }}</span>
                            &nbsp;
                          </a>
                        </noscript>
                        <div
                          class="lookbook__point-popup pos-absolute z-index-1 global-settings-popup gradient d-none no-js-hidden"
                          id="LOOKBOOK-{{ block.id }}-{{ product.id }}-{{ forloop.index }}"
                        >
                          <template>
                            <div class="item__card pos-relative animate-arrow color-{{ block.settings.product_color_scheme }}">
                              {% render 'card-product',
                                card_product: product,
                                media_aspect_ratio: settings.card_image_ratio,
                                show_secondary_image: settings.show_secondary_image,
                                show_vendor: false,
                                show_vendor_mobile: false,
                                show_rating: false,
                                show_rating_mobile: false,
                                show_quick_add: settings.enable_quick_add,
                                show_quick_add_mobile: settings.enable_quick_add_mobile,
                                show_swatch: settings.show_swatch,
                                show_swatch_mobile: settings.show_swatch_mobile,
                                show_wishlist: settings.show_wishlist,
                                show_wishlist_mobile: settings.show_wishlist_mobile,
                                card_button_text_size: settings.card_button_text_size,
                                card_button_type: settings.card_button_type,
                                card_button_transform: settings.card_button_transform,
                                card_style_popup: 'advanced-default',
                                index: forloop.index,
                                section_id: section.id
                              %}
                            </div>
                          </template>
                        </div>
                      </lookbook-point>
                    {%- endif -%}
                  {%- endfor -%}
                  {%- if has_product -%}
                    <lookbook-drawer-opener
                      class="lookbook__drawer-opener d-none pos-absolute o-h no-js-hidden"
                      data-side-drawer="#LOOKBOOK-{{ block.id }}-{{ section.id }}"
                    >
                      <button
                        class="d-block t-button b-none c-pointer o-h l-h-1 gradient"
                        type="button"
                        aria-haspopup="dialog"
                        aria-label="{{ 'general.lookbook.show' | t }}"
                      >
                        <span class="text">{{ 'general.lookbook.show' | t }}</span>
                      </button>
                    </lookbook-drawer-opener>
                    <lookbook-drawer
                      id="LOOKBOOK-{{ block.id }}-{{ section.id }}"
                      class="lookbook__drawer drawer pos-fixed top-0 left-0 z-index-8 w-100v h-100 d-flex a-i-end j-c-end no-js-hidden"
                    >
                      <div class="side-drawer no-animation--popup w-100">
                        <div
                          id="Drawer-Overlay-LOOKBOOK-{{ block.id }}-{{ section.id }}"
                          class="drawer__overlay pos-fixed top-0 left-0 right-0 bottom-0 c-pointer"
                        ></div>
                        <template>
                          <div
                            class="lookbook__drawer-inner drawer__inner gradient d-flex f-column o-h color-background-1"
                            role="dialog"
                            aria-modal="true"
                            aria-label="{{ 'general.lookbook.view_all' | t }}"
                            tabindex="-1"
                          >
                            <div class="lookbook__drawer-header drawer__header d-flex j-c-between a-i-center pos-relative">
                              <h2 class="lookbook__drawer-heading drawer__heading break m-0">
                                {{ 'general.lookbook.view_all' | t }}
                              </h2>
                              <button
                                class="lookbook__drawer-close drawer__close d-block t-button b-none c-pointer b-circle button--close"
                                type="button"
                                onclick="this.closest('lookbook-drawer').close()"
                                aria-label="{{ 'accessibility.close' | t }}"
                              >
                                <span class="i__close e-none d-block pos-relative color-current w-100 h-100"></span>
                              </button>
                            </div>
                            <div
                              class="lookbook__drawer-wrapper drawer__wrapper d-flex f-nowrap overflow-x g-gap p-b"
                              style="--g-gap: 1rem; --p-b: 1rem;"
                            >
                              {%- for i in (1..5) -%}
                                {%- capture product -%}product_{{ i }}{%- endcapture -%}
                                {%- assign product = block.settings[product] -%}
                                {%- if product != blank -%}
                                  {%- liquid
                                    assign ratio = product.featured_media.aspect_ratio
                                    if ratio == 0 or ratio == null
                                      assign ratio = 1
                                    endif
                                  -%}
