{%- liquid
  assign posts_displayed = section.settings.blog.articles_count
  if section.settings.post_limit <= posts_displayed
    assign posts_exceed_limit = true
  endif
  assign grid_number = section.settings.grid_number
  assign grid_number_tablet = section.settings.grid_number_tablet
  assign grid_number_mobile = section.settings.grid_number_mobile
  assign carousel_number = section.settings.carousel_number
  assign carousel_number_tablet = section.settings.carousel_number_tablet
  assign carousel_number_mobile = section.settings.carousel_number_mobile
  assign spacing_desktop = section.settings.spacing_desktop
  assign spacing_tablet = section.settings.spacing_tablet
  assign spacing_mobile = section.settings.spacing_mobile
  
  assign highest_ratio = 1
  for article in section.settings.blog.articles limit: section.settings.post_limit
    if article.image.aspect_ratio > highest_ratio
      assign highest_ratio = article.image.aspect_ratio
    endif
  endfor

  for block in section.blocks
    case block.type
      when 'tags'
        assign check_tags = true
      when 'content'
        assign check_content = true
    endcase
  endfor

  capture icon_arrow_list
    render 'icon-arrow-list'
  endcapture
-%}
<div class="section__f-blog spacing spacing-xs color-{{ section.settings.color_scheme }} gradient{% if section.settings.show_line_separator %} bottom-line{% endif %}"
  style="
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --padding-top-xs: {{ section.settings.padding_top_mobile }}px;
    --padding-bottom-xs: {{ section.settings.padding_bottom_mobile }}px;
  "
>
  <div class="container-line blog-post col-{{ carousel_number }}{% if section.settings.style_layout == 'enable_carousel' %} carousel-special{% endif %} blog-{{ section.settings.style_layout }}">
    <div class="{{ section.settings.header_width }} m-auto{% if section.settings.header_width == 'full-width' %} p-container-f-w{% endif %}"
      {% if section.settings.header_width == 'customized-width' %}style="--page-width: {{ section.settings.customize_width }}px;"{% endif %}
      {% if section.settings.header_width == 'full-width' %}style="--padding-container-full-width: {{ section.settings.padding_container_full_w }}px;"{% endif %}
    >
      {%- if section.settings.heading != blank or section.settings.show_view_all != 'none' -%}
        <div class="p-w__header m-spacing" style="--m-spacing-b: {{ section.settings.heading_margin_bottom }}px;">
          <{% if section.settings.heading_animation == 'split' %}splitting-animate{% else %}animate-element{% endif %} 
            class="p-w__header--wrapper {{ section.settings.heading_alignment }}
              {% if section.settings.show_view_all == 'link' %} d-flex j-c-between a-i-center f-wrap f-{{ section.settings.heading_alignment | replace: 'left', 'row' | replace: 'center', 'column' | replace: 'right', 'row-reverse' }} g-gap{% endif %}
            " 
            {%- if section.settings.show_view_all == 'link' %} 
              style="--g-gap: 1.5rem;" 
            {%- endif -%}
          >
            <h2 {% if section.settings.heading_animation == 'split' %}data-splitting-element="chars" data-splitting-animate="up"{% else %}data-animate="{{ section.settings.heading_animation }}"{% endif %} 
              id="SectionHeading-{{ section.id }}" 
              class="p-w__heading {{ section.settings.heading_size | prepend: 'heading-size-' }} m-0{% if section.settings.icon != 'none' %} has-icon d-flex a-i-center j-c-{{ section.settings.heading_alignment }} f-{{ section.settings.heading_alignment | replace: 'left', 'row' | replace: 'center', 'row' | replace: 'right', 'row-reverse' }}{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            >
              {%- if section.settings.icon != 'none' -%}
                <span class="item__icon">
                  {% render 'icon-accordion', icon: section.settings.icon %}
                </span>
              {%- endif -%}
              {{ section.settings.heading | escape }}
            </h2>
            {%- if section.settings.show_view_all == 'link' and section.settings.blog != blank and section.settings.post_limit < section.settings.blog.articles_count -%}
              <a href="{{ section.settings.blog.url }}" class="link u-u u-link {{ settings.link_type | prepend: "link--style-" }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" aria-label="{{ 'sections.featured_blog.view_all' | t }}">
                <span class="text link-style">
                  {%- if section.settings.button_label != blank -%}
                    {{- section.settings.button_label | escape -}}
                  {%- else -%}
                    {{ 'sections.featured_blog.view_all' | t }}
                  {%- endif -%}
                </span>
              </a>
            {%- endif -%}
          </{% if section.settings.heading_animation == 'split' %}splitting-animate{% else %}animate-element{% endif %}>
        </div>
      {%- endif -%}
    </div>
    <div class="{{ section.settings.content_width }} m-auto{% if section.settings.content_width == 'full-width' %} p-container-f-w{% endif %}"
      {% if section.settings.content_width == 'customized-width' %}style="--page-width: {{ section.settings.customize_width }}px;"{% endif %}
      {% if section.settings.content_width == 'full-width' %}style="--padding-container-full-width: {{ section.settings.padding_container_full_w }}px;"{% endif %}
    >
      <div class="p-w__content">
        {%- if section.settings.style_layout == 'enable_carousel' -%}
          <theme-swiper
            data-class-component="all"
            data-class-slider="grid"
            data-class-items="grid__item m-0-i"
            data-breakpoint="u-lg"
          >
        {%- endif -%}
          <slider-component class="carousel d-block pos-relative{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if section.settings.style_layout == 'enable_carousel' %}
                data-type-pagination="{{ section.settings.pagination_type }}"
                data-space-between-desktop="{{ spacing_desktop }}"
                data-space-between-tablet="{{ spacing_tablet }}"
                data-space-between="{{ spacing_mobile }}"
                data-item-to-show-desktop="{{ carousel_number }}"
                data-item-to-show-tablet="{{ carousel_number_tablet }}"
                data-item-to-show-mobile="{{ carousel_number_mobile }}"
                data-item-to-show-mobile-xs="{{ carousel_number_mobile }}"
            {% endif %}
          >
            {%- if section.settings.style_layout == 'enable_carousel' -%}
              <div class="swiper d-block pos-relative grid-scroll no-js-grid-scroll no-js-overflow-x" 
                style="--n-j-grid-h-md: 0px; --n-j-grid-h-xs: 0px; --padding-h-md: 20px; --padding-h-xs: 10px;"
              > 
            {%- endif -%}
                <div class="carousel__items{% if section.settings.style_layout == 'enable_carousel' %} swiper-wrapper f-nowrap{% else %} f-wrap grid{% endif %} d-flex" id="Slider-{{ section.id }}" aria-label="Featured blog"
                  style="{% if section.settings.style_layout == 'enable_carousel' %}--c-xs: {{ carousel_number_mobile }}; --c-sm: {{ carousel_number_mobile }}; --c-md: {{ carousel_number_tablet }}; --c-lg: {{ carousel_number }};{% else %}--c-xs: {{ grid_number_mobile }}; --c-sm: {{ grid_number_mobile }}; --c-md: {{ grid_number_tablet }}; --c-lg: {{ grid_number }};{% endif %} --grid-v-xs: {{ spacing_mobile }}px; --grid-v-md: {{ spacing_tablet }}px; --grid-v-lg: {{ spacing_desktop }}px; --grid-h-xs: {{ spacing_mobile }}px; --grid-h-md: {{ spacing_tablet }}px; --grid-h-lg: {{ spacing_desktop }}px;"
                >
                  {%- for article in section.settings.blog.articles limit: section.settings.post_limit -%}
                    <div role="listitem" 
                      id="Slide-{{ section.id }}-{{ forloop.index }}" 
                      class="carousel__item{% if section.settings.style_layout == 'enable_carousel' %} swiper-slide scroll-s-start no-js-grid__item no-js-grid__scroll{% else %} grid__item{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                      {% if settings.animations_reveal_on_scroll %}
                        style="--animation-order: {{ forloop.index }};"
                      {% endif %}
                    >
                      <div class="item pos-relative{% if carousel_number == 1 %} d-flex{% endif %}">
                        {%- if section.settings.show_image -%}
                          <a class="item__media d-block color-foreground{% unless check_tags %} link-cover{% endunless %}{% if carousel_number == 1 %} d-inline-block{% endif %}" href="{{ article.url }}">
                            <animate-element class="d-block gradient-global o-h" background>
                              <div class="media media--transparent media--{{ section.settings.image_ratio }} media--zoom pos-relative o-h d-block"
                                {% if section.settings.image_ratio == 'adapt' %}
                                  {% if article.image != blank %}
                                    style="padding-bottom: {{ 1 | divided_by: article.image.aspect_ratio | times: 100 }}%;"
                                  {% else %}
                                    style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                                  {% endif %}
                                {% endif %}
                                data-animate="{{ section.settings.image_animation }}"
                              >
                                {%- if article.image != blank -%}
                                  {%- capture sizes -%}
                                    (min-width: 1200px) calc(100vw / {{carousel_number_mobile}}), (min-width:
                                    750px) {% if section.blocks.size == 1 %}100vw{% else %}calc(100vw / 2){% endif %}, calc(100vw - 30px)
                                  {%- endcapture -%}
                                  {{
                                    article.image | image_url: width: 1420 | image_tag:
                                    loading: 'lazy',
                                    sizes: sizes,
                                    widths: '275, 550, 710, 1420',
                                    class: 'motion-reduce'
                                  }}
                                {%- else -%}
                                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                {%- endif -%}
                              </div>
                            </animate-element>
                          </a>
                        {%- endif -%}
                        <animate-element class="item__content {{ section.settings.text_alignment }}{% if carousel_number == 1 %} d-inline-block{% endif %}">
                          <div class="d-block o-h{% if section.settings.style_layout == 'enable_carousel' %} m-auto{% endif %}" data-animate="{{ section.settings.text_animation }}" style="--a-delay: {{ '0.2' | times: forloop.index }}s;{% if section.settings.style_layout == 'enable_carousel' %} --m-w: 45.6rem;{% endif %}">
                            {%- for block in section.blocks -%}
                              {%- case block.type -%}
                                {%- when 'tags' -%}
                                  <div class="block--tags tags d-flex f-wrap j-c-{{ section.settings.text_alignment | replace: 'left', 'start' | replace: 'right', 'end' }} spacing" style="--padding-top: {{ block.settings.padding_top }}px; --padding-bottom: {{ block.settings.padding_bottom }}px;">
                                    {% for tag in article.tags %}
                                      <a href="{{ section.settings.blog.url }}/tagged/{{ tag | handle }}" class="item-tag d-inline-flex u-none link" aria-label="link">{{ tag }}</a>
                                    {% endfor %}
                                  </div>
                                {%- when 'heading' -%}
                                  <h2 class="block--heading{% if block.settings.heading_size == 'h2' %} h2{% else %} p-w__heading {{ block.settings.heading_size | prepend: 'heading-size-' }}{% endif %} spacing" 
                                    style="
                                      --padding-top: {{ block.settings.padding_top }}px; 
                                      --padding-bottom: {{ block.settings.padding_bottom }}px;
                                    "
                                  >
                                    <a href="{{ article.url }}" class="d-block u-none color-current link{% if section.settings.text_per_line != 'none' %} limit-text{% endif %}" style="{% if section.settings.text_per_line != 'none' %} --text-per-line: {{ section.settings.text_per_line }} {% endif %}">{{ article.title | escape }}</a>
                                  </h2>
                                {%- when 'content' -%}
                                  {%- if article.excerpt.size > 0 or article.content.size > 0 -%}
                                    <div class="block--content rte spacing" style="--padding-top: {{ block.settings.padding_top }}px; --padding-bottom: {{ block.settings.padding_bottom }}px;">
                                      {%- if article.excerpt.size > 0 -%}
                                        {{ article.excerpt | strip_html }}
                                      {%- else -%}
                                        {{ article.content | strip_html | truncatewords: 250 }}
                                      {%- endif -%}
                                    </div>
                                  {%- endif -%}
                                {%- when 'author' -%}
                                  <div class="block--author author info {{ block.settings.text_size | prepend: 'text-size-' }} spacing" 
                                    style="
                                      --padding-top: {{ block.settings.padding_top }}px; 
                                      --padding-bottom: {{ block.settings.padding_bottom }}px;
                                    "
                                  >
                                    {{ 'blogs.article.author_1' | t : author :  article.author }}
                                  </div>
                                {%- when 'date' -%}
                                  <div class="block--date day info {{ block.settings.text_size | prepend: 'text-size-' }} spacing" 
                                    style="
                                      --padding-top: {{ block.settings.padding_top }}px; 
                                      --padding-bottom: {{ block.settings.padding_bottom }}px;
                                    "
                                  >
                                    {{ article.published_at | time_tag: '%d/%m/%Y' }}
                                  </div>
                                {%- when 'button' -%}
                                  <div class="block--button spacing" style="--padding-top: {{ block.settings.padding_top }}px; --padding-bottom: {{ block.settings.padding_bottom }}px;">
                                    <a class="button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }}{% if block.settings.button_transparent == 'transparent' %} button--transparent{% endif %} mi-w" href="{{ article.url }}" style="--mi-w: 20rem;">
                                      <span class="text">{{ 'blogs.article.read_more' | t }}</span>
                                      {% render 'button-main-style' %}
                                    </a>
                                  </div>
                              {%- endcase -%}
                            {%- endfor -%}
                          </div>
                        </animate-element>
                      </div>
                    </div>
                  {%- else -%}
                    {%- for i in (1..section.settings.post_limit) -%}
                      <div role="listitem" id="Slide-{{ section.id }}-{{ forloop.index }}" class="carousel__item{% if section.settings.style_layout == 'enable_carousel' %} swiper-slide scroll-s-start no-js-grid__item no-js-grid__scroll{% else %} grid__item{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                        {% if settings.animations_reveal_on_scroll %}
                          style="--animation-order: {{ forloop.index }};"
                        {% endif %}
                      >
                        <div class="item pos-relative{% if carousel_number == 1 %} d-flex{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                          {%- if section.settings.show_image -%}
                            <div class="item__media d-block color-foreground link-cover{% if carousel_number == 1 %} d-inline-block{% endif %}">
                              <div class="media media--transparent media--{{ section.settings.image_ratio }} media--zoom pos-relative o-h d-block"
                                {% if section.settings.image_ratio == 'adapt' %}
                                  style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                                {% endif %}
                              >
                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                              </div>
                            </div>
                          {%- endif -%}
                          <div class="item__content {{ section.settings.text_alignment }}{% if carousel_number == 1 %} d-inline-block{% endif %}">
                            <h3 class="h2">{{ 'sections.featured_blog.onboarding_title' | t }}</h3>
                            {%- if check_content -%}
                              <div class="rte">{{ 'sections.featured_blog.onboarding_content' | t }}</div>
                            {%- endif -%}
                          </div>
                        </div>
                      </div>
                    {%- endfor -%}
                  {%- endfor -%}
                </div>
                {%- if posts_exceed_limit and section.settings.style_layout == 'enable_carousel' -%}
                  <div class="carousel__controls arrow-style-{{ settings.arrow_style }} carousel__controls--inner no-js-hidden" style="--padding: 0px;">
                    {%- if section.settings.arrows_type != 'none' -%}
                      <button type="button" data-step="1" class="button-slider button-slider__prev swiper-screen__{{ section.settings.arrows_type }} button-slider__hover color-arrow t-button b-none c-pointer pos-absolute z-index-2 b-circle p-0 d-flex a-i-center j-c-center swiper-button-prev" aria-label="{{ 'accessibility.previous_slide' | t }}" aria-controls="Slider-{{ section.id }}" name="previous">
                        {{ icon_arrow_list }}
                      </button>
                      <button type="button" data-step="1" class="button-slider button-slider__next swiper-screen__{{ section.settings.arrows_type }} button-slider__hover color-arrow t-button b-none c-pointer pos-absolute z-index-2 b-circle p-0 d-flex a-i-center j-c-center swiper-button-next" aria-label="{{ 'accessibility.next_slide' | t }}" aria-controls="Slider-{{ section.id }}" name="next">
                        {{ icon_arrow_list }}
                      </button>
                    {%- endif -%}
                    <div class="swiper-pagination swiper-screen__{{ section.settings.enable_pagination_type }} pos-relative pos-relative-xs"></div>
                  </div>
                {%- endif -%}
            {%- if section.settings.style_layout == 'enable_carousel' -%}
              </div> 
            {%- endif -%}
          </slider-component>
        {%- if section.settings.style_layout == 'enable_carousel' -%}
          </theme-swiper>
        {%- endif -%}
      </div>
      {%- if section.settings.show_view_all == 'button' and section.settings.blog != blank and section.settings.post_limit < section.settings.blog.articles_count -%}
        <div class="p-w__bottom w-100 center{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {%- if settings.enable_animated_cursor -%}
            <a href="{{ section.settings.blog.url }}" class="cursor-fixed__parallax-target d-inline-block pos-relative">
              <span class="cursor-fixed__parallax-inner d-inline-block">
          {%- endif -%}
              <{% if settings.enable_animated_cursor %}span{% else %}a href="{{ section.settings.blog.url }}"{% endif %} class="button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }}">
                <span>{{- section.settings.button_label | escape -}}</span>
              </{% if settings.enable_animated_cursor %}span{% else %}a{% endif %}>
          {%- if settings.enable_animated_cursor -%}
                </span>
            </a>
          {%- endif -%}	
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
