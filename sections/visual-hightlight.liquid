{%- if section.blocks.size > 0 -%}
    {%- liquid
        capture icon_mouse
            render 'icon-mouse-down'
        endcapture
    -%}
    <div class="section__visual-hightlight pos-relative" data-anchor-container="data-anchor-container">
        <slideshow-component class="d-block gradient color-{{ section.settings.color_scheme }} {% if section.settings.carousel_infinite_scroll %} infinite-scroll{% endif %}" data-type-pagination="{{ section.settings.pagination_type }}" data-speed="{{ section.settings.change_slides_speed }}">
            <div role="region" aria-roledescription="{{ 'sections.slideshow.carousel' | t }}" aria-label="{{ section.settings.accessibility_info | escape }}" class="visual-hightlight swiper slider">
                <div aria-live="polite" aria-atomic="true" id="Slider-{{ section.id }}" class="visual-hightlight__items swiper-wrapper slider__items f-row no-js-overflow-x no-js-scroll-b">
                    {%- for block in section.blocks -%}
                        {%- liquid
                            assign type_banner = block.settings.type_banner
                            assign alignment = block.settings.text_alignment
                        -%}
                        <div class="swiper-slide visual-hightlight__item {{ type_banner }} {{ alignment }} slider__item slider__item--{{ forloop.index }} scroll-s-start mi-w banner__media-hover" 
                            role="group" 
                            aria-roledescription="Slide" 
                            aria-label="{{ 'accessibility.slide' | t: index: forloop.index, total: forloop.length }}" 
                            tabindex="-1" 
                            id="Slide-{{ section.id }}-{{ forloop.index }}" 
                            style="--mi-w: 100%;
                            --mi-h: {{ section.settings.slide_height }}vh;
                            --media-opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }};
                            --color-opacity: {{ block.settings.color_overlay_opacity.red }},{{ block.settings.color_overlay_opacity.green }},{{ block.settings.color_overlay_opacity.blue }};" 
                            {{ block.shopify_attributes }}
                        >
                            <div class="item-wrap h-100{% if type_banner == 'half' %} d-flex{% endif %}">
                                <div class="item-inner item-bg o-h{% if block.settings.image_primary or block.settings.mobile_image != blank %} item-bg--primary{% endif %} h-100{% if block.settings.type_banner == 'full' %} pos-absolute top-0 left-0 w-100{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}">
                                    {%- if block.settings.image_primary != blank -%}
                                        {%- assign image_alt = block.settings.image_primary.alt | default: shop.name | escape -%}
                                        {%- if forloop.index == 1 -%}
                                            {{ block.settings.image_primary | image_url: width: block.settings.image_primary.width | image_tag:
                                                widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                                                sizes: '100vw',
                                                alt: image_alt,
                                                class: 'd-none d-block-md w-100 h-100 o-f-cover motion-reduce'
                                            }}
                                        {%- else -%}
                                            {{ block.settings.image_primary | image_url: width: block.settings.image_primary.width | image_tag:
                                                loading: 'lazy',
                                                widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                                                sizes: '100vw',
                                                alt: image_alt,
                                                class: 'd-none d-block-md w-100 h-100 o-f-cover motion-reduce'
                                            }}
                                        {%- endif -%}
                                    {%- else -%}
                                        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg d-none d-block-md w-100 h-100 pos-absolute pos-absolute-c-c' }}
                                    {%- endif -%}
                                    {%- if block.settings.mobile_image != blank -%}
                                        {%- assign image_alt = block.settings.mobile_image.alt | default: shop.name | escape -%}
                                        {%- if forloop.index == 1 -%}
                                            {{ block.settings.mobile_image | image_url: width: block.settings.mobile_image.width | image_tag:
                                                widths: '750',
                                                sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                                                alt: image_alt,
                                                class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                                            }}
                                        {%- else -%}
                                            {{ block.settings.mobile_image | image_url: width: block.settings.mobile_image.width | image_tag:
                                                loading: 'lazy',
                                                widths: '750',
                                                sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                                                alt: image_alt,
                                                class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                                            }}
                                        {%- endif -%}
                                    {%- elsif block.settings.image_primary != blank -%}
                                        {%- assign image_alt = block.settings.image_primary.alt | default: shop.name | escape -%}
                                        {%- if forloop.index == 1 -%}
                                            {{ block.settings.image_primary | image_url: width: block.settings.image_primary.width | image_tag:
                                                widths: '750',
                                                sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                                                alt: image_alt,
                                                class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                                            }}
                                        {%- else -%}
                                            {{ block.settings.image_primary | image_url: width: block.settings.image_primary.width | image_tag:
                                                loading: 'lazy',
                                                widths: '750',
                                                sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                                                alt: image_alt,
                                                class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                                            }}
                                        {%- endif -%}
                                    {%- else -%}
                                        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg d-block d-none-md w-100 h-100 pos-absolute pos-absolute-c-c' }}
                                    {%- endif -%}
                                </div>
                                {%- if block.settings.subheading != blank or block.settings.heading != blank or block.settings.description != blank or block.settings.button_label != blank -%}
                                    <div class="item-inner item-content h-100 d-flex a-i-center j-c-{{ alignment | replace: 'left', 'start' | replace: 'right', 'end'  }}{% if type_banner == 'half' %} pos-relative{% else %} page-width m-auto{% endif %}">
                                        {%- if block.settings.image_second != blank and type_banner == 'half' -%}
                                            <div class="item-bg item-bg--second pos-absolute left-0 top-0 w-100 h-100 z-0">
                                                {%- if block.settings.image_second != blank -%}
                                                    {%- assign image_alt = block.settings.image_second.alt | default: shop.name | escape -%}
                                                    {{ block.settings.image_second | image_url: width: block.settings.image_second.width | image_tag:
                                                        loading: 'lazy',
                                                        widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                                                        sizes: '100vw',
                                                        alt: image_alt,
                                                        class: 'd-none d-block-md w-100 h-100 o-f-cover motion-reduce'
                                                    }}
                                                {%- else -%}
                                                    {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg d-none d-block-md w-100 h-100 pos-absolute pos-absolute-c-c' }}
                                                {%- endif -%}
                                                {%- if block.settings.mobile_image != blank -%}
                                                    {%- assign image_alt = block.settings.mobile_image.alt | default: shop.name | escape -%}
                                                    {{ block.settings.mobile_image | image_url: width: block.settings.mobile_image.width | image_tag:
                                                        loading: 'lazy',
                                                        widths: '750',
                                                        sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                                                        alt: image_alt,
                                                        class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                                                    }}
                                                {%- elsif block.settings.image_second != blank -%}
                                                    {{ block.settings.image_second | image_url: width: block.settings.image_second.width | image_tag:
                                                        loading: 'lazy',
                                                        widths: '750',
                                                        sizes: '(min-width: 361px) calc(100vw/2), calc(100vw/3)',
                                                        alt: image_alt,
                                                        class: 'd-block d-none-md w-100 h-100 o-f-cover motion-reduce'
                                                    }}
                                                {%- else -%}
                                                    {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg d-block d-none-md w-100 h-100 pos-absolute pos-absolute-c-c' }}
                                                {%- endif -%}
                                            </div>
                                        {%- endif -%}
                                        <animate-element class="item-content-inner pos-relative w-100 data__media-hover z-index-2">
                                            {%- if block.settings.subheading != blank -%}
                                                <p class="item-content__subhead {{ block.settings.subheading_size | prepend: 'text-size text-size-' }} m-0" data-animate="fade-up" style="--a-delay: 0.2s;">
                                                    {{ block.settings.subheading | escape }}
                                                </p>
                                            {%- endif -%}
                                            {%- if block.settings.heading != blank -%}
                                                <h2 class="item-content__heading {{ block.settings.heading_size | prepend: 'heading-size-' }} m-spacing" style="--m-spacing-b: 2.4rem;--a-delay: 0.3s;" data-animate="fade-up">
                                                    {{ block.settings.heading | escape }}
                                                </h2>
                                            {%- endif -%}
                                            {%- if block.settings.description != blank -%}
                                                <h3 class="item-content__description {{ block.settings.description_size | prepend: 'text-size text-size-' }}" data-animate="fade-up" style="--a-delay: 0.4s;">
                                                    {{ block.settings.description }}
                                                </h3>
                                            {%- endif -%}
                                            {%- if block.settings.button_label != blank -%}
                                                <div class="item-content__button" data-animate="fade-up" style="--a-delay: 0.5s;">
                                                    <a class="button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }} {% if block.settings.button_style == 'transparent' %} button--transparent{% endif %}"{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %}>
                                                        <span class="text">{{ block.settings.button_label | escape }}</span>
                                                        {% render 'button-main-style' %}
                                                    </a>
                                                </div>
                                            {%- endif -%}
                                        </animate-element>
                                    </div>
                                {%- endif -%}
                            </div>
                        </div>
                    {%- endfor -%}
                </div>
                {%- if section.blocks.size > 1 -%}
                    <div class="slideshow__controls arrow-style-{{ settings.arrow_style }} controls-{{ section.settings.pagination_type }} d-flex a-i-center w-100 j-c-center no-js-hidden">
                        <div class="swiper-pagination swiper-screen__{{ section.settings.enable_pagination_type }} slider-counter pos-relative-xs z-index-1 d-flex a-i-center j-c-center"></div>
                        {%- if section.settings.enable_autoplay -%}
                            <button type="button" class="button-slider button-slider__autoplay gradient gradient-global t-button b-none c-pointer d-flex a-i-center j-c-center no-js-hidden pos-absolute{% if section.settings.pagination_type == 'none'%} pos-relative-xs{% endif %} z-index-2 b-circle p-0" aria-label="{{ 'sections.slideshow.pause_slideshow' | t }}">
                                {%- render 'icon-pause' -%}
                                {%- render 'icon-play' -%}
                                <svg class="autoplay-progress" viewBox="0 0 48 48">
                                    <circle cx="24" cy="24" r="20"></circle>
                                </svg>
                            </button>
                        {%- endif -%}
                    </div>
                    <noscript>
                        <div class="slideshow__controls d-flex a-i-center j-c-center w-100">
                            <div class="slider-counter pos-absolute pos-relative-xs z-index-2">
                                <div class="slider-counter__wrapper d-flex a-i-center j-c-center">
                                    {%- for block in section.blocks -%}
                                        <a href="#Slide-{{ section.id }}-{{ forloop.index }}" class="slider-counter__link link link--text u-none" aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}">
                                            {{ forloop.index }}
                                        </a>
                                    {%- endfor -%}
                                </div>
                            </div>
                        </div>
                    </noscript>
                {%- endif -%}
            </div>
        </slideshow-component>
        <anchor-target class="btn-scroll d-block pos-absolute c-pointer z-index-1" data-anchor="data-anchor">
            <div class="btn-scroll-text d-flex">
                <span style="--delay : 0.1s">s</span>
                <span style="--delay : 0.2s">c </span>
                <span style="--delay : 0.3s">r</span>
                <span style="--delay : 0.4s">o</span>
                <span style="--delay : 0.5s">l</span>
                <span style="--delay : 0.6s">l</span>
            </div>
            <button class="mouse pos-relative mx-auto d-block p-0 m-0 bg-transparent b-none" aria-label="Mouse scroll">
                <div class="line pos-absolute o-h"></div>
                {{ icon_mouse }}
            </button>
        </anchor-target>
    </div>
    {%- if request.design_mode -%}
        <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}
{%- endif -%}

