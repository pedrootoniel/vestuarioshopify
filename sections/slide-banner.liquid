{%- liquid
    capture icon_arrow_list
        render 'icon-arrow-list'
    endcapture
-%}
<div class="section_slide-banner color-{{ section.settings.color_scheme }} gradient"
    {% if section.settings.use_custom_color %}
    style="
        --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
        --color-background: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
        --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};"
    {% endif %}
>
    <div class="slide-banner__wrap">
        <animate-element class="slide-banner d-flex f-wrap">
            <div class="slide-banner__col col-image">
                <div class="slide-banner__image h-100 o-h">
                    {%- if section.settings.image_first -%}
                        {{ section.settings.image_first | image_url: width: 3840 | image_tag: loading: 'lazy',
                            width: section.settings.image_first.width,
                            height: image_height,
                            class: image_class,
                            sizes: full_width,
                            widths: widths
                        }}
                    {%- else -%}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg w-100 h-100' }}
                    {%- endif -%}
                </div>
            </div>
            <div class="slide-banner__col col-content">
                <slideshow-component class="slide-banner__carousel d-block h-100{% if section.settings.carousel_infinite_scroll %} infinite-scroll{% endif %}{% if section.settings.enable_autoplay %} enable--autoplay{% endif %}"
                    {% if section.settings.enable_autoplay %} data-speed="{{section.settings.change_slides_speed}}"{% endif %}
                    data-type-pagination="{{ section.settings.pagination_type }}"
                >
                    <div class="swiper slider h-100"
                        role="region"
                        aria-roledescription="{{ 'sections.slideshow.carousel' | t }}"
                        aria-label="{{ section.settings.accessibility_info | escape }}"
                    >
                        <div
                            aria-live="polite"
                            aria-atomic="true"
                            id="Slider-{{ section.id }}"
                            class="slide-banner__items swiper-wrapper slider__items f-row no-js-overflow-x no-js-scroll-b {{ section.settings.image_ratio | prepend: "slideshow--ratio-" }} {{ section.settings.image_ratio_mobile | prepend: "slideshow--ratio-mobile-" }}"
                        >
                            {%- for block in section.blocks -%}
                                <div class="slide-banner__item swiper-slide slider__item slider__item--{{ forloop.index }} scroll-s-start mi-w"
                                    role="group"
                                    aria-roledescription="Slide"
                                    aria-label="{{ 'accessibility.slide' | t: index: forloop.index, total: forloop.length }}"
                                    tabindex="-1"
                                    id="Slide-{{ section.id }}-{{ forloop.index }}"
                                    style="--mi-w: 100%;"
                                    {{ block.shopify_attributes }}
                                >
                                    <div class="slide-banner__content {{ block.settings.text_alignment }} {{ block.settings.font_transform }} h-100 d-flex f-column j-c-center m-auto"
                                        style="
                                            --padding-top: {{ section.settings.padding_top_block }}px;
                                            --padding-bottom: {{ section.settings.padding_bottom_block }}px;
                                            --padding-top-xs: {{ section.settings.padding_top_block_mobile }}px;
                                            --padding-bottom-xs: {{ section.settings.padding_bottom_block_mobile }}px;
                                        "
                                    >
                                        <div class="content-wrap mx-auto" style="--content-max-width: {{ block.settings.content_max_width | divided_by: 10 | append: 'rem' }}">
                                            {%- if block.settings.subheading != blank -%}
                                                <div class="slide-banner__subheading {{ block.settings.subheading_size | prepend: 'text-size-' }}"
                                                    data-splitting="chars"
                                                >
                                                    {{ block.settings.subheading | escape }}
                                                </div>
                                            {%- endif -%}
                                            {%- if block.settings.heading != blank -%}
                                                <h2 class="slide-banner__heading {{ block.settings.heading_size | prepend: 'heading-size-' }} m-0"
                                                    style="--a-delay: 0.4s;"
                                                    data-splitting="chars"
                                                >
                                                    {{ block.settings.heading }}
                                                </h2>
                                            {%- endif -%}
                                            {%- if block.settings.content != blank -%}
                                                <div class="slide-banner__text text-size text-size-default w-100" data-splitting="chars">
                                                    {{- block.settings.content -}}
                                                </div>
                                            {%- endif -%}
                                        </div>
                                        {%- if block.settings.time != blank -%}
                                            <div class="banner__countdown hidden d-flex j-c-{{ block.settings.text_alignment | replace: 'left', 'start' | replace: 'right', 'end' }} m-t"
                                                style="
                                                --color-foreground: {{ block.settings.colors_text.red }}, {{ block.settings.colors_text.green }}, {{ block.settings.colors_text.blue }};
                                                --color-background: {{ block.settings.colors_background.red }}, {{ block.settings.colors_background.green }}, {{ block.settings.colors_background.blue }};
                                                --gradient-background: {% if block.settings.gradient_background != blank %}{{ block.settings.gradient_background }}{% else %}{{ block.settings.colors_background }}{% endif %};
                                                --padding-top: {{ block.settings.padding_top }}px;
                                                --padding-bottom: {{ block.settings.padding_bottom }}px;
                                                --a-delay: {{ '0.2' | times: forloop.index }}s;
                                                --m-t: {{ block.settings.time_margin_top }}px;
                                                "
                                                data-animate="{{ section.settings.text_animation }}"
                                                {{ block.shopify_attributes }}
                                            >
                                                <count-down class="d-block w-100 element-spacing element-spacing-all border"
                                                    data-countdown="{{ block.settings.time }}"
                                                    data-type="banner"
                                                    style="--border-alpha: 1;"
                                                >
                                                    <div class="countdown d-flex a-i-center j-c-center gradient pos-relative o-h m-auto"></div>
                                                </count-down>
                                            </div>
                                        {%- endif -%}
                                        {%- if block.settings.button_label != blank -%}
                                            <div class="slide-banner__button o-h m-spacing m-spacing-xs"
                                                style="--m-spacing-t: {{ block.settings.button_margin_top }}px; --m-spacing-t-xs: {{ block.settings.button_margin_top_mobile }}px;"
                                            >
                                                {%- if block.settings.button_label != blank -%}
                                                    <div class="button-inner">
                                                        <a class="button {{ settings.button_type | prepend: 'button--main-' }} {{ settings.button_icon | prepend: 'button--icon-' }} {{ settings.button_style | prepend: 'button--style-' }}{% if block.settings.button_transparent == 'transparent' %} button--transparent{% endif %}"
                                                            {%- if block.settings.button_link == blank %}
                                                                role="link" aria-disabled="true"
                                                            {% else %}
                                                                href="{{ block.settings.button_link }}"
                                                            {% endif -%}
                                                        >
                                                            <span class="text">{{ block.settings.button_label | escape }}</span>
                                                            {% render 'button-main-style' %}
                                                        </a>
                                                    </div>
                                                {%- endif -%}
                                            </div>
                                        {%- endif -%}
                                    </div>
                                </div>
                            {%- endfor -%}
                        </div>
                        {%- if section.blocks.size > 1 -%}
                            <div class="ide-banner__controls arrow-style-{{ settings.arrow_style }} controls-{{ section.settings.pagination_type }} d-flex a-i-center w-100 no-js-hidden">
                                {%- if section.settings.arrows_type != 'none' -%}
                                    <button type="button" class="button-slider button-slider__prev swiper-screen__{{ section.settings.arrows_type }} button-slider__hover color-arrow t-button b-none c-pointer{% if section.settings.type_style == 'special' %} pos-static{% else %} pos-absolute{% endif %}{% if section.settings.pagination_type == 'none'%} pos-relative-xs{% endif %} z-index-2 b-circle p-0 d-flex a-i-center j-c-center swiper-button-prev" aria-label="{{ 'accessibility.previous_slide' | t }}" aria-controls="Slider-{{ section.id }}" name="previous">
                                        {{ icon_arrow_list }}
                                    </button>
                                {%- endif -%}
                                {%- if section.settings.arrows_type != 'none' -%}
                                    <button type="button" class="button-slider button-slider__next swiper-screen__{{ section.settings.arrows_type }} button-slider__hover color-arrow t-button b-none c-pointer{% if section.settings.type_style == 'special' %} pos-static{% else %} pos-absolute{% endif %}{% if section.settings.pagination_type == 'none'%} pos-relative-xs{% endif %} z-index-2 b-circle p-0 d-flex a-i-center j-c-center swiper-button-next" aria-label="{{ 'accessibility.next_slide' | t }}" aria-controls="Slider-{{ section.id }}" name="next">
                                        {{ icon_arrow_list }}
                                    </button>
                                {%- endif -%}
                                <div class="swiper-pagination swiper-screen__{{ section.settings.enable_pagination_type }} slider-counter z-index-1 d-flex a-i-center j-c-center"></div>
                            </div>
                            <noscript>
                                <div class="ide-banner__controls d-flex a-i-center j-c-center w-100">
                                    <div class="slider-counter pos-absolute pos-relative-xs z-index-2">
                                        <div class="slider-counter__wrapper d-flex a-i-center j-c-center">
                                            {%- for block in section.blocks -%}
                                                <a href="#Slide-{{ section.id }}-{{ forloop.index }}" class="slider-counter__link link link--text u-none" aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}">
                                                    {{ forloop.index }}
                                                </a>
                                            {%- endfor -%}
                                        </div>
                                    </div>
                                </div>
                            </noscript>
                        {%- endif -%}
                    </div>
                </slideshow-component>
            </div>
            <div class="slide-banner__col col-image">
                <div class="slide-banner__image h-100 o-h">
                    {%- if section.settings.image_second -%}
                        {{ section.settings.image_second | image_url: width: 3840 | image_tag: loading: 'lazy',
                            width: section.settings.image_second.width,
                            height: image_height,
                            class: image_class,
                            sizes: full_width,
                            widths: widths
                        }}
                    {%- else -%}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg w-100 h-100' }}
                    {%- endif -%}
                </div>
            </div>
        </animate-element>
    </div>
</div>
